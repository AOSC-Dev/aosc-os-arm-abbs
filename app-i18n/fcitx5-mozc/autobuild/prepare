abinfo "Disabling fcitx4 target"
rm -v "$SRCDIR"/src/unix/fcitx/fcitx.gyp
  
abinfo "Disabling android-ndk requirement, even if we don't need it bazel will complain"
sed "/android_ndk_repository/d" -i "$SRCDIR"/src/WORKSPACE.bazel

abinfo "Adjust QT_BASE_PATH"
sed 's|path = QT_BASE_PATH|path = "/usr/include/qt6"|' -i "$SRCDIR"/src/WORKSPACE.bazel
