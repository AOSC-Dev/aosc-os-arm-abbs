#abinfo "Generating zip code seed"
#PYTHONPATH="$PWD:$PYTHONPATH" python3 "$SRCDIR"/src/dictionary/gen_zip_code_seed.py \
#	--zip_code="$SRCDIR"/x-ken-all.csv \
#	--jigyosyo="$SRCDIR"/JIGYOSYO.CSV \ 
#	>> "$SRCDIR"/src/data/dictionary_oss/dictionary09.txt

abinfo "Disabling fcitx4 target"
rm -v "$SRCDIR"/src/unix/fcitx/fcitx.gyp
  
abinfo "Disabling android-ndk requirement, even if we don't need it bazel will complain"
sed "/android_ndk_repository/d" -i "$SRCDIR"/src/WORKSPACE.bazel

abinfo "Fixing up Qt module for Bazel ..."
cd "$SRCDIR"/src
rm -rf "$HOME"/.cache/bazel
bazel aquery @qt_linux//:BUILD.bazel
BZL_QT_MODULE="$(readlink -f ~/.cache/bazel/_bazel_root/*/external/qt_linux/)"
rm -v "$BZL_QT_MODULE"/libexec
ln -sv /usr/bin "$BZL_QT_MODULE"/libexec

cd "$SRCDIR"
