PKGNAME=fcitx5-chinese-addons
PKGSEC=utils
PKGDES="Fcitx 5 Chinese addons"
PKGDEP="curl libime fcitx5-qt boost opencc gettext fcitx5-lua"
BUILDDEP="extra-cmake-modules git fmt qt-5"
PKGCONFL="fcitx"

PKGEPOCH=1

CMAKE_AFTER="-DUSE_QT6=OFF"

# FIXME: Qt5WebEngineWidgets is only available on amd64 and arm64, using WebKit instead
CMAKE_AFTER__NOWEBENGINE="${CMAKE_AFTER} -DUSE_WEBKIT=ON"
CMAKE_AFTER__LOONGARCH64="${CMAKE_AFTER__NOWEBENGINE}"
CMAKE_AFTER__LOONGSON3="${CMAKE_AFTER__NOWEBENGINE}"
CMAKE_AFTER__PPC64EL="${CMAKE_AFTER__NOWEBENGINE}"
CMAKE_AFTER__RISCV64="${CMAKE_AFTER__NOWEBENGINE}"
CMAKE_AFTER__MIPS64R6EL="${CMAKE_AFTER__NOWEBENGINE}"
