PKGNAME=libluv
PKGSEC=libs
PKGDEP="libuv luajit"
PKGDEP__LOONGARCH64="lua libuv"
PKGDEP__RISCV64="lua libuv"
PKGDEP__PPC64EL="lua libuv"
PKGDES="Lua bindings for LibUV"

CMAKE_AFTER="-DWITH_SHARED_LIBUV=ON \
             -DLUA_BUILD_TYPE=System \
             -DBUILD_MODULE=OFF \
             -DBUILD_SHARED_LIBS=ON"
CMAKE_AFTER__LOONGARCH64="${CMAKE_AFTER} -DWITH_LUA_ENGINE=Lua"
CMAKE_AFTER__RISCV64="${CMAKE_AFTER} -DWITH_LUA_ENGINE=Lua"
CMAKE_AFTER__PPC64EL="${CMAKE_AFTER} -DWITH_LUA_ENGINE=Lua"
ABTYPE=cmakeninja
