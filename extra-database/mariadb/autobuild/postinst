if [[ -e /var/lib/mysql ]]; then
	# Warn users about the change
	echo "\`/var/lib/mysql' is no longer used as the default datadir."
	echo "Your config file stays unmodified."
	echo "Please use \`/var/db/mysql' instead."
elif [[ ! -e /var/db/mysql ]]; then
	install -dm700 /var/db/mysql
	chown -R mysql:mysql /var/db/mysql &>/dev/null
	/usr/bin/mysql_install_db --user=mysql --basedir=/usr --datadir=/var/db/mysql
	echo "========"
	echo "We have initialized a database at /var/db/mysql."
	echo "You may run \`systemctl start mysqld.service' to start MariaDB."
fi
