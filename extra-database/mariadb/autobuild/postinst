# Check if there's any file in old datadir
if [ "$(ls -A /var/lib/mysql)" ]; then
	# Warn users about the change
	echo "\`/var/lib/mysql' is no longer used as the default MySQL datadir."
	echo "Please considering migrate to \`/var/db/mysql' instead."
# Only to initialize if the directory is empty
elif [ ! "$(ls -A /var/db/mysql)" ] ; then
	install -dm700 /var/db/mysql
	chown -R mysql:mysql /var/db/mysql &>/dev/null
	/usr/bin/mysql_install_db --user=mysql --basedir=/usr --datadir=/var/db/mysql
	echo
	echo "We have initialized a database at /var/db/mysql."
	echo "You may run \`systemctl start mysqld.service' to launch the MariaDB daemon."
# This datadir is being used or was initialized
else
	echo "MariaDB is now upgraded to a new version."
	echo "You may run \`mysql_upgrade' to upgrade your MariaDB databases."
fi
