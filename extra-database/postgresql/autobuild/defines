PKGNAME=postgresql
PKGSEC=database
PKGDEP="krb5 libxml2 readline openssl"
BUILDDEP="python-2 perl tcl"
PKGDES="A sophisticated object-relational DBMS"

NOSTATIC=no
AUTOTOOLS_AFTER="--datadir=/usr/share/postgresql \
                 --with-krb5 \
                 --with-libxml \
                 --with-openssl \
                 --with-perl \
                 --with-python \
                 --with-tcl \
                 --with-pam \
                 --with-system-tzdata=/usr/share/zoneinfo \
                 --enable-nls \
                 --enable-thread-safety"
ABMK="world"
ABSHADOW=no
