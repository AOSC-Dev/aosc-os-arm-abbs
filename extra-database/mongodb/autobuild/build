scons all \
    --use-system-pcre \
    --use-system-snappy \
    --use-system-tcmalloc \
    --use-sasl-client \
    --use-system-boost \
    --ssl \
    --disable-warnings-as-errors \
    --variant-dir=build \
    --c++11=on \
    --cc=clang --cxx=clang++ \
    LIBS=atomic $MAKEFLAGS

scons install \
    --use-system-pcre \
    --use-system-snappy \
    --use-system-tcmalloc \
    --use-sasl-client \
    --use-system-boost \
    --ssl \
    --disable-warnings-as-errors \
    --prefix=`pwd`/abdist/usr \
    --variant-dir=build \
    --c++11=on \
    --cc=clang --cxx=clang++ \
    LIBS=atomic $MAKEFLAGS

install -dm700 abdist/var/lib/mongodb
install -dm755 abdist/var/log/mongodb
