PKGNAME=dosbox
PKGSEC=virtual
PKGDEP="sdl-net zlib sdl-sound mesa libpng libpcap alsa-lib glu fluidsynth"
PKGDES="DOSBOX, a DOS emulator (the DOSBox-X fork)"

AUTOTOOLS_AFTER="--sysconfdir=/etc/dosbox --enable-core-inline --enable-opengl \
                 --enable-dynamic-core --enable-shaders"
ABSHADOW=no

# Takes years.
NOLTO=yes
