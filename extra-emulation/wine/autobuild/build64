mkdir wine64
pushd wine64

../configure \
      --prefix=/usr \
      --libdir=/usr/lib \
      --with-x \
      --with-xattr \
      --with-d3dadapter \
      --with-gstreamer \
      --enable-win64 \
      --with-va
make  
make prefix="$PKGDIR/usr" \
     libdir="$PKGDIR/usr/lib/" \
     dlldir="$PKGDIR/usr/lib/wine" install

popd

