mkdir wine32
pushd wine32

../configure \
    --prefix=/opt/32 \
    --with-x \
    --with-xattr \
    --with-d3dadapter \
    --without-gstreamer \
    --libdir=/usr/lib \
    --with-wine64=`pwd`/../wine64 \
    --with-va \
    PKG_CONFIG_PATH="/opt/32/lib/pkgconfig"
make
make prefix="$PKGDIR/opt" \
     libdir="$PKGDIR/opt/32/lib" \
     dlldir="$PKGDIR/opt/32/lib/wine/" install

popd
