if [[ "${CROSS:-$ARCH}" != "loongson3" ]]; then
    COMMON_CONFIGURE_FLAGS="
	--prefix=/usr
	--sysconfdir=/etc
	--localstatedir=/var
	--python=/usr/bin/python3
	--disable-strip
	--enable-lto
    "
else
    COMMON_CONFIGURE_FLAGS="
	--prefix=/usr
	--sysconfdir=/etc
	--localstatedir=/var
	--python=/usr/bin/python3
	--disable-strip
	--disable-lto
    "
fi

DYN_CONFIGURE_FLAGS="
	--smbd=/usr/bin/smbd
	--enable-docs
	--libexecdir=/usr/lib/qemu
	--enable-gtk
	--enable-linux-aio
	--enable-seccomp
	--enable-spice
	--enable-tpm
	--enable-modules
	--enable-libiscsi
	--enable-mpath
	--enable-curl
	--disable-gcrypt
	--enable-nettle
	--enable-jemalloc
	--enable-smartcard
	--enable-pie
	--audio-drv-list=pa,sdl,alsa,jack
"

STATIC_CONFIGURE_FLAGS="
	--enable-attr
	--enable-linux-user
	--enable-tcg
	--disable-bpf
	--disable-bsd-user
	--disable-capstone
	--disable-docs
	--disable-fdt
	--disable-gcrypt
	--disable-glusterfs
	--disable-gnutls
	--disable-gtk
	--disable-install-blobs
	--disable-kvm
	--disable-libiscsi
	--disable-libnfs
	--disable-libssh
	--disable-linux-io-uring
	--disable-nettle
	--disable-opengl
	--disable-qom-cast-debug
	--disable-sdl
	--disable-system
	--disable-tools
	--disable-tpm
	--disable-vde
	--disable-vhost-crypto
	--disable-vhost-kernel
	--disable-vhost-net
	--disable-vhost-user
	--disable-vnc
	--disable-werror
	--disable-xen
	--disable-zstd
	--static
"

mkdir "${SRCDIR}/build-dyn"
pushd "${SRCDIR}/build-dyn"
	abinfo "Configuring dynamic link build..."
	../configure ${COMMON_CONFIGURE_FLAGS} ${DYN_CONFIGURE_FLAGS} \
		--extra-ldflags="${LDFLAGS}" \
		--extra-cflags="${CFLAGS}"

	abinfo "Building..."
	make

	abinfo "Installing to PKGDIR..."
	make DESTDIR="${PKGDIR}" install
popd

mkdir "$SRCDIR/build-static"
abinfo "Applying 9999 patch before building static"
for i in "${SRCDIR}"/autobuild/patches/9999-*; do
	abinfo "Applying $i"
	patch -Np1 < "$i"
done
pushd "$SRCDIR/build-static"
	abinfo "Configuring static user emulation"
	../configure ${COMMON_CONFIGURE_FLAGS} ${STATIC_CONFIGURE_FLAGS} \
		--extra-ldflags="${LDFLAGS}" \
		--extra-cflags="${CFLAGS}"

	abinfo "Building static user emulation tools"
	make

	# Binaries should be installed in split packages
	mkdir -p "$SRCDIR"/staticbin
	cp -v *-linux-user/qemu-* "$SRCDIR"/staticbin/
popd
