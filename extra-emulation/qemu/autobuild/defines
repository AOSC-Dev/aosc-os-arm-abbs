PKGNAME=qemu
PKGSEC=admin
PKGDEP="ceph pixman libcacard libjpeg-turbo libpng sdl alsa-lib nss \
        glib gnutls bluez vde2 util-linux curl cyrus-sasl mesa \
        pulseaudio seabios libcap-ng libaio libseccomp libiscsi \
        usbredir curl spice libssh libnfs brltty dtc jemalloc \
        virglrenderer vte-gtk3 sdl2"
BUILDDEP="spice-protocol xmlto doxygen dtc"
PKGDES="A KVM based virtualization client"

ABRPMAUTOPROVONLY=yes

AUTOTOOLS_AFTER="--prefix=/usr --sysconfdir=/etc \
                 --python=/usr/bin/python2 --smbd=/usr/bin/smbd \
                 --enable-docs --libexecdir=/usr/lib/qemu \
                 --enable-gtk --enable-linux-aio --enable-seccomp \
                 --localstatedir=/var --enable-spice \
                 --enable-tpm --enable-modules \
                 --enable-libiscsi --enable-curl --disable-gcrypt \
                 --enable-nettle --enable-jemalloc \
                 --enable-smartcard --enable-pie \
                 --with-sdlabi=2.0 --with-gtkabi=3.0 \
                 --audio-drv-list=pa,sdl,alsa,oss \
                 --enable-tcg-interpreter"
AB_FLAGS_PIE=0
