install -dm 755 "$PKGDIR"/usr/share/themes/Flat-Plat
cp --no-preserve='ownership,mode' index.theme "$PKGDIR"/usr/share/themes/Flat-Plat
cp -dr --no-preserve='ownership,mode' gnome-shell/ "$PKGDIR"/usr/share/themes/Flat-Plat
cp -dr --no-preserve='ownership,mode' gtk-2.0/ "$PKGDIR"/usr/share/themes/Flat-Plat
cp -dr --no-preserve='ownership,mode' gtk-3.0 "$PKGDIR"/usr/share/themes/Flat-Plat

# Don't care about chrome extensions.
# Neither GDM themes. It may be buggy and break GDM.
