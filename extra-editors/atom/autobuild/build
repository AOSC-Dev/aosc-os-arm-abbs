script/build --verbose --build-dir "$SRCDIR"/atom-build

mkdir -p "$PKGDIR"/usr/{bin,lib/atom}
cp -ar out/atom-$PKGVER-amd64/* "$PKGDIR"/usr/lib/atom
ln -s /usr/lib/atom/atom "$PKGDIR"/usr/bin/atom

mkdir -p "$PKGDIR"/usr/share/applications/
cp "$SRCDIR"/resources/linux/Atom.desktop \
   "$PKGDIR"/usr/share/applications/atom.desktop
sed -e "s/=.*atom/=atom/g" \
    -e "s/atom.png/atom/g" \
    -i "$PKGDIR"/usr/share/applications/atom.desktop

install -Dm644 "$SRCDIR"/out/app/resources/atom.png \
               "$PKGDIR"/usr/share/pixmaps/atom.png
