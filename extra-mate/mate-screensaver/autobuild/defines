PKGNAME=mate-screensaver
PKGSEC=x11
PKGDEP="dbus-glib libmatekbd libnotify mate-desktop mate-menus mate-session-manager mate-power-manager"
BUILDDEP="mate-common"
PKGDES="screensavers and lock support for MATE desktop"

AUTOTOOLS_AFTER="--with-xscreensaverdir=/usr/share/xscreensaver/config \
                 --with-xscreensaverhackdir=/usr/lib/xscreensaver \
                 --with-mit-ext \
                 --with-libnotify \
                 --enable-locking \
                 --with-gtk=2.0"
