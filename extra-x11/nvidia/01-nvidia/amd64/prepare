sed -e 's/nvidia_drm_gem_prime_soft_fence_event/NVKMS_KAPI_CALL nvidia_drm_gem_prime_soft_fence_event/g' \
    -i kernel/nvidia-drm/nvidia-drm-fence.c
cd ..
