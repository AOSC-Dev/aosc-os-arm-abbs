for package in $(grep -v '^#' font-7.7.md5 | awk '{print $2}')
do
  packagedir=${package%.tar.bz2}
  tar -xf $package
  pushd $packagedir
  ./configure --host=$HOST --prefix=/usr --sysconfdir=/etc \
              --localstatedir=/var --disable-static || exit 1
  make || exit 1
  make DESTDIR=$PKGDIR install || exit 1
  popd
done
