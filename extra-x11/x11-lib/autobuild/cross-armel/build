pwdd=`pwd`
XORG_CONFIG="--host=$HOST --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-static --cache-file=config.cache --enable-malloc0returnsnull=no"
for package in $(grep -v '^#' lib-7.7.md5 | awk '{print $2}')
do
  packagedir=${package%.tar.bz2}
  tar -xf $package
  pushd $packagedir
  cat > config.cache << EOF
ac_cv_func_malloc_0_nonnull=yes
ac_cv_func_realloc_0_nonnull=yes
EOF
  case $packagedir in
    libXfont-[0-9]* )
      ./configure $XORG_CONFIG --disable-devel-docs || exit 1
    ;;
    libXt-[0-9]* )
      ./configure $XORG_CONFIG \
                  --with-appdefaultdir=/etc/X11/app-defaults || exit 1
    ;;
    * )
      ./configure $XORG_CONFIG || exit 1
    ;;
  esac
  make || exit 1
  make DESTDIR=$pwdd/abdist install || exit 1
  popd
done
