PKGNAME=intel-media-sdk
PKGSEC=libs
PKGDEP="gcc-runtime intel-compute-runtime intel-media-driver libclc \
        libdrm libva wayland"
PKGDES="Intel's C API to access hardware-accelerated video decode, encode and filtering on Intel Gen graphics hardware platforms"

CMAKE_AFTER="-DBUILD_ALL=ON \
             -DBUILD_TOOLS=ON \
             -DENABLE_ITT=OFF \
             -DENABLE_OPENCL=ON \
             -DENABLE_WAYLAND=ON \
             -DENABLE_X11_DRI3=ON"

PKGPROV="libmfx"
