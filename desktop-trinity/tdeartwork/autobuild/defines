PKGNAME=tdeartwork
PKGSEC=Trinity
PKGDEP="tdebase xscreensaver"
BUILDDEP="tde-common-cmake"
PKGDES="Extra icon themes, screensavers, and wallpapers, etc. for the Trinity Desktop Environment"

CMAKE_AFTER="-DLIB_INSTALL_DIR=/usr/lib \
             -DBUILD_ALL=ON \
             -DWITH_ALL_INCLUDED_XSCREENSAVER=ON \
             -DWITH_ALL_OPTIONS=ON \
             -DWITH_ARTS=ON \
             -DWITH_GCC_VISIBILITY=OFF \
             -DWITH_LIBART=ON \
             -DWITH_OPENGL=ON \
             -DWITH_XSCREENSAVER=ON"

NOLIBTOOL=0
