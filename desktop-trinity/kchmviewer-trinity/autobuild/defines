PKGNAME=kchmviewer-trinity
PKGSEC=Trinity
PKGDEP="chmlib tdelibs"
BUILDDEP="tde-common-cmake"
PKGDES="A CHM (Compiled HTML Help) file viewer for the Trinity Desktop Environment"

CMAKE_AFTER="-DLIB_INSTALL_DIR=/usr/lib \
             -DBUILD_ALL=ON \
             -DWITH_ALL_OPTIONS=ON \
             -DWITH_GCC_VISIBILITY=OFF"

PKGCONFL="kchmviewer"

NOLIBTOOL=0
