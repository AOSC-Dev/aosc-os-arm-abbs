PKGNAME=linux-pam
PKGDES="Pluggable Authentication Modules"
PKGDEP="glibc cracklib libtirpc"
PKGSEC=admin

AUTOTOOLS_AFTER="--docdir=/usr/share/doc/Linux-PAM \
                 --disable-db --libdir=/usr/lib \
                 --enable-static"
ABMK="SCONFIGDIR=/etc/security"
NOPARALLEL=yes
NOSTATIC=no
NOLTO=yes
