sed -i 's|# End of file||' $pkgdir/etc/security/limits.conf
cat >>abdist/etc/security/limits.conf <<_EOT
*               -       rtprio          0
*               -       nice            0
@audio          -       rtprio          65
@audio          -       nice           -10
@audio          -       memlock         40000
_EOT

pushd abdist/usr/lib/security
ln -s pam_unix.so pam_unix_acct.so
ln -s pam_unix.so pam_unix_auth.so
ln -s pam_unix.so pam_unix_passwd.so
ln -s pam_unix.so pam_unix_session.so
popd

chmod -v 4755 abdist/usr/bin/unix_chkpwd

rm abdist/usr/share/doc/Linux-PAM/sag-pam_userdb.html
