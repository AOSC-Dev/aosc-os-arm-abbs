PKGNAME=opencc
PKGEPOCH=1
PKGSEC=localization
PKGDEP="gcc-runtime marisa"
PKGDEP__RETRO="gcc-runtime"
PKGDEP__ARMEL="${PKGDEP__RETRO}"
PKGDEP__ARMHF="${PKGDEP__RETRO}"
PKGDEP__I486="${PKGDEP__RETRO}"
PKGDEP__LOONGSON2F="${PKGDEP__RETRO}"
PKGDEP__POWERPC="${PKGDEP__RETRO}"
PKGDEP__PPC64="${PKGDEP__RETRO}"
BUILDDEP="cmake doxygen wheel rapidjson tclap pybind11 chrpath"
BUILDDEP__RETRO="chrpath"
BUILDDEP__ARMEL="${BUILDDEP__RETRO}"
BUILDDEP__ARMHF="${BUILDDEP__RETRO}"
BUILDDEP__I486="${BUILDDEP__RETRO}"
BUILDDEP__LOONGSON2F="${BUILDDEP__RETRO}"
BUILDDEP__POWERPC="${BUILDDEP__RETRO}"
BUILDDEP__PPC64="${BUILDDEP__RETRO}"
PKGDES="Open source Chinese conversion library and utilities"

# Need to set LIB_INSTALL_DIR so that the .pc file has the correct libdir.
CMAKE_AFTER="-DCMAKE_INSTALL_PREFIX=/usr \
             -DLIB_INSTALL_DIR=/usr/lib \
             -DBUILD_DOCUMENTATION:BOOL=ON \
             -DBUILD_PYTHON:BOOL=ON \
             -DUSE_SYSTEM_MARISA:BOOL=ON \
             -DUSE_SYSTEM_PYBIND11:BOOL=ON \
             -DUSE_SYSTEM_RAPIDJSON:BOOL=ON \
             -DUSE_SYSTEM_TCLAP:BOOL=ON \
             -DCMAKE_SKIP_RPATH=OFF"
CMAKE_AFTER__RETRO=" \
             -DCMAKE_INSTALL_PREFIX=/usr \
             -DLIB_INSTALL_DIR=/usr/lib \
             -DBUILD_DOCUMENTATION:BOOL=OFF \
             -DBUILD_PYTHON:BOOL=OFF \
             -DUSE_SYSTEM_MARISA:BOOL=OFF \
             -DUSE_SYSTEM_PYBIND11:BOOL=OFF \
             -DUSE_SYSTEM_RAPIDJSON:BOOL=OFF \
             -DUSE_SYSTEM_TCLAP:BOOL=OFF \
             -DCMAKE_SKIP_RPATH=OFF"
CMAKE_AFTER__ARMEL="${CMAKE_AFTER__RETRO}"
CMAKE_AFTER__ARMHF="${CMAKE_AFTER__RETRO}"
CMAKE_AFTER__I486="${CMAKE_AFTER__RETRO}"
CMAKE_AFTER__LOONGSON2F="${CMAKE_AFTER__RETRO}"
CMAKE_AFTER__POWERPC="${CMAKE_AFTER__RETRO}"
CMAKE_AFTER__PPC64="${CMAKE_AFTER__RETRO}"

AB_FLAGS_O3=1
