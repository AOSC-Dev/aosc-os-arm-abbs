abinfo "Installing theme file to $PKGDIR..."

variants=""
for i in `ls -d "$SRCDIR"/fcitx5-theme-opensuse/*`; do
	test -d $i && variants+="$(basename $i) "
done

for variant in $variants; do
	install -Dvm644 "$SRCDIR"/fcitx5-theme-opensuse/"$variant"/highlight.png "$PKGDIR"/usr/share/fcitx5/themes/"$variant"/highlight.png
	install -Dvm644 "$SRCDIR"/fcitx5-theme-opensuse/"$variant"/bar.png "$PKGDIR"/usr/share/fcitx5/themes/"$variant"/bar.png
	install -Dvm644 "$SRCDIR"/fcitx5-theme-opensuse/"$variant"/theme.conf "$PKGDIR"/usr/share/fcitx5/themes/"$variant"/theme.conf
done

abinfo "Installing LICENSE..."
install -Dvm644 "$SRCDIR"/fcitx5-theme-opensuse/LICENSE "$PKGDIR"/usr/share/doc/fcitx5-theme-opensuse/LICENSE
