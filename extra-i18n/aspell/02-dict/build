abinfo "Extracting dicts tarball ..."
tar xf "$SRCDIR"/../aspell-dicts.tar.xz

pushd "$SRCDIR"/aspell-dicts-*
for i in `cat build-list`; do
    abinfo "Building $i ..."
    pushd $i
    ./configure
    make
    make install DESTDIR="$PKGDIR"
    popd
done
popd

abinfo "Putting files from main package ..."
cp -v "$SRCDIR"/aspell-0.60/* "$PKGDIR"/usr/lib/aspell-0.60/
