OPTIONS = xi2
EXFLAGS =

TARGET	= libazxc.a
CXX	= g++
CXXFLAGS = -march=x86-64 -mtune=core2 -O2 -pipe -fstack-protector-strong --param=ssp-buffer-size=4 -msse -msse2 -msse3 -fPIC -fno-lto -fuse-linker-plugin -Wno-error
INCLUDE = -I./include -I/usr/include/freetype2
MACRO	=
AR	= ar
ARFLAGS = rv
RM	= rm -f

SRCDIR	= ./src/
OBJDIR	= ./_obj/
SRCS	= $(notdir $(wildcard $(SRCDIR)*.cpp))
OBJS	= $(addprefix $(OBJDIR),$(SRCS:%.cpp=%.o))

##################

ifdef DEBUGMODE
    CXXFLAGS = -g -Wall
endif

ifneq (,$(findstring asmx86,$(OPTIONS)))
    MACRO += -D_AX_OPT_ASM_X86
endif

ifneq (,$(findstring xi2,$(OPTIONS)))
    MACRO += -D_AX_OPT_XI2
endif

CXXFLAGS += $(EXFLAGS)

##################

.PHONY: all debug clean

all: $(TARGET)

$(TARGET): $(OBJS)
	$(AR) $(ARFLAGS) $@ $^

$(OBJDIR)%.o: $(SRCDIR)%.cpp
	$(CXX) $(CXXFLAGS) $(MACRO) $(INCLUDE) -c $< -o $@

debug:
	-$(RM) $(TARGET) $(OBJS)
	$(MAKE) all DEBUGMODE=on OPTIONS="$(OPTIONS)" EXFLAGS="$(EXFLAGS)"

clean:
	-$(RM) $(TARGET) $(OBJS)
	-rmdir $(OBJDIR)
