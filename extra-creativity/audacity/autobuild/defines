PKGNAME=audacity
PKGSEC=sound
PKGDEP="libmad libid3tag wxgtk lame hicolor-icon-theme desktop-file-utils jack ffmpeg \
        twolame vamp-plugin-sdk soxr soundtouch libsbsms"
PKGDES="A program that lets you manipulate digital audio waveforms"
AUTOTOOLS_AFTER="--enable-sse --enable-universal_binary --with-libsndfile --with-libsamplerate \
                 --with-expat --with-libvorbis --with-libmad --with-libflac --with-ffmpeg --with-lame \
                 --with-libmad --with-libsoxr --with-libtwolame --with-vamp --with-soundtouch"

ABSHADOW=no
NOPARALLEL=yes
RECONF=no
USECLANG=no
