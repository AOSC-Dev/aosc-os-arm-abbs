PKGNAME=gimp
PKGDES="GNU Image Manipulation Program"
PKGSEC=graphics
PKGDEP="babl dbus-glib desktop-file-utils gegl hicolor-icon-theme jasper lcms1 libexif libmng librsvg libwmf openexr pygtk alsa-lib curl ghostscript gutenprint poppler webkitgtk"

AUTOTOOLS_AFTER="--enable-mp --enable-gimp-console --enable-gimp-remote \
                 --enable-python --with-gif-compression=lzw --with-libcurl \
                 --without-aa --without-hal --without-gvfs --without-gnomevfs"
ABSHADOW=no
NOPARALLEL=yes
NOLTO=no

