cd "$SRCDIR"/../kicad-i18n-$PKGVER
abinfo "Running CMake for i18n data ..."
cmake . \
    ${CMAKE_DEF} \
    -DKICAD_I18N_UNIX_STRICT_PATH=ON

abinfo "Building i18n data ..."
make

abinfo "Installing i18n data ..."
make install DESTDIR="$PKGDIR"

abinfo "Installing documentation ..."
cp -rv "$SRCDIR"/../kicad-doc-$PKGVER/share \
    "$PKGDIR"/usr/

for i in symbols footprints packages3D; do
    cd "$SRCDIR"/../kicad-$i-$PKGVER
    abinfo "Running CMake for $i ..."
    cmake .. ${CMAKE_DEF}

    abinfo "Building $i ..."
    make -j1

    abinfo "Installing $i ..."
    make install DESTDIR="$PKGDIR" -j1
done

cd "$SRCDIR"
