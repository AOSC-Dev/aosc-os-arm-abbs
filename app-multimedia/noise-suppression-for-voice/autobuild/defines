PKGNAME=noise-suppression-for-voice
PKGSEC=sound
BUILDDEP="cmake"
PKGDES="Noise suppression plugin based on Xiph's RNNoise"

ABTYPE=cmake
AB_FLAGS_O3=1
CMAKE_AFTER="-DBUILD_LADSPA_PLUGIN=ON \
             -DBUILD_LV2_PLUGIN=ON \
             -DBUILD_VST_PLUGIN=OFF"

PKGBREAK="rnnoise<=0.9"
PKGREP="rnnoise<=0.9"
