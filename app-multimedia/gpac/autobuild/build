abinfo "Configuring $PKGNAME ..."
"$SRCDIR"/configure \
    --prefix=/usr \
    --mandir=/usr/share/man \
    --X11-path=/usr \
    --disable-qjs \
    --use-openjpeg=system \
    --extra-cflags="${CPPFLAGS} ${CFLAGS}" \
    --extra-ldflags="${LDFLAGS}"

abinfo "Building $PKGNAME ..."
make

abinfo "Installing $PKGNAME ..."
# FIXME: Installation fails with parallelism.
make \
    install \
    install-lib \
    DESTDIR="$PKGDIR" \
    STRIP=true \
    -j1
