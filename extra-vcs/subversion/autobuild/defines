                 --enable-apxs \
                 --with-sqlite=/usr \
                 --without-gnome-keyring \
                 --without-kwallet \
                 --disable-javahl --disable-ruby \
                 --with-apache-libexecdir=/usr/lib/httpd/modules \
                 --disable-static \
                 --enable-bdb6"
