PKGNAME=powerpc-utils
PKGSEC=admin
PKGDEP="bc librtas"
PKGDES="Utilities for PowerPC/POWER-based systems"

PKGBREAK="pmac-utils<=1.1.3"
PKGREP="pmac-utils<=1.1.3"

