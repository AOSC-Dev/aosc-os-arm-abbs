PKGNAME=parted
PKGSEC=admin
PKGDEP="lvm2 e2fsprogs"
PKGDES="A program for creating, destroying, resizing, checking and copying partitions"

AUTOTOOLS_AFTER="--disable-mtrace \
                 --enable-device-mapper \
                 --disable-discover-only \
                 --enable-debug \
                 --enable-read-only \
                 --enable-pc98 \
                 --enable-hfs-extract-fs \
                 --enable-largefile \
                 --enable-year2038 \
                 --enable-threads=isoc+posix \
                 --enable-assert \
                 --with-readline \
                 --with-packager=AOSC \
                 --with-packager-bug-reports=https://github.com/AOSC-Dev/aosc-os-abbs/issues/new/choose \
                 LIBS=-luuid"
