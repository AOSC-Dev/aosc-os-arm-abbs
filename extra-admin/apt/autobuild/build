make CC=$HOST-gcc CXX=$HOST-g++

mkdir -p abdist/usr/bin &&
mkdir -p abdist/usr/sbin &&
cp build/bin/apt abdist/usr/sbin/apt &&
cp build/bin/apt-* abdist/usr/bin/ &&
mkdir -p abdist/usr/lib/apt/methods &&
cp build/bin/methods/* abdist/usr/lib/apt/methods/ &&
mkdir -p abdist/usr/lib/dpkg/methods/apt &&
cp build/scripts/dselect/* abdist/usr/lib/dpkg/methods/apt/
mkdir -p abdist/usr/share &&
cp -r build/locale abdist/usr/share &&
cp -r build/bin/libapt* abdist/usr/lib &&
mkdir -p abdist/usr/include/apt-pkg &&
cp build/include/apt-pkg/*.h abdist/usr/include/apt-pkg
