CC=$HOST-gcc CXX=$HOST-g++ ./configure --host=armv7a-hardfloat-linux-gnueabi --prefix=/usr --sysconfdir=/etc --disable-tests 
mkdir -p build
pushd build
CC=$HOST-gcc CXX=$HOST-g++ ../configure --host=armv7a-hardfloat-linux-gnueabi --prefix=/usr --sysconfdir=/etc --disable-tests
popd
# cp config.status build/
make 

make -C po

mkdir -p abdist/usr/bin &&
mkdir -p abdist/usr/sbin &&
cp bin/apt abdist/usr/sbin/apt &&
cp bin/apt-* abdist/usr/bin/ &&
mkdir -p abdist/usr/lib/apt/methods &&
cp bin/methods/* abdist/usr/lib/apt/methods/ &&
mkdir -p abdist/usr/lib/dpkg/methods/apt &&
cp scripts/dselect/* abdist/usr/lib/dpkg/methods/apt/
mkdir -p abdist/usr/share &&
cp -r locale abdist/usr/share &&
cp -r bin/libapt* abdist/usr/lib &&
mkdir -p abdist/usr/include/apt-pkg &&
cp include/apt-pkg/*.h abdist/usr/include/apt-pkg
