rm -r "abdist/usr/lib/rpm"

install -m644 "tmpfiles.d/legacy.conf" "abdist/usr/lib/tmpfiles.d"

chown root:systemd-journal abdist/var/log/journal
chmod 2755 abdist/var/log/journal

rm -r abdist/var/log/journal/remote

sed 's|system-auth|system-login|g' -i "abdist/etc/pam.d/systemd-user"

echo 'disable *' > abdist/usr/lib/systemd/system-preset/99-default.preset

