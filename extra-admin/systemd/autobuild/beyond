abinfo "Installing systemd file..."
install -m644 "tmpfiles.d/legacy.conf" "$PKGDIR"/usr/lib/tmpfiles.d

chown root:systemd-journal "$PKGDIR"/var/log/journal
chmod 2755 "$PKGDIR"/var/log/journal

sed 's|system-auth|system-login|g' -i "$PKGDIR"/usr/lib/pam.d/systemd-user

echo 'disable *' > "$PKGDIR"/usr/lib/systemd/system-preset/99-default.preset

abinfo "Building libgudev..."

cd "$SRCDIR"/../libgudev-*

./configure --prefix=/usr --disable-gtk-doc \
            --enable-introspection --disable-umockdev \
            PYTHON=/usr/bin/python3
make
make install DESTDIR="$PKGDIR"

cd "$SRCDIR"
