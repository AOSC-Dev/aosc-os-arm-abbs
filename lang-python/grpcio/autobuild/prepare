abinfo "Extracting googletest..."
mkdir -pv "$SRCDIR"/googletest
cd "$SRCDIR"/googletest
tar xvf "$SRCDIR"/../googletest.tar.gz 

abinfo "Extracting abseil-cpp..."
mkdir -p "$SRCDIR"/abseil-cpp
cd "$SRCDIR"/abseil-cpp
tar xvf "$SRCDIR"/../abseil-cpp.tar.gz

abinfo "Linking googtest..."
ln -sfv "$SRCDIR"/googletest/googletest-${__gtestver}/{googlemock,googletest} \
	"$SRCDIR"/third_party/googletest

abinfo "Linking abseil-cpp..."
rm -rv "$SRCDIR"/third_party/abseil-cpp
ln -sfv "$SRCDIR"/abseil-cpp/abseil-cpp-${__abseilcppver} \
	"$SRCDIR"/third_party/abseil-cpp

abinfo 'Adding $SRCDIR/build to LD_LIBRARY_PATH to aid bundling ...'
export LD_LIBRARY_PATH="$SRCDIR/build"
