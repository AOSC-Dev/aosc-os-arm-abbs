PKGNAME=nvtop
PKGSEC=admin
PKGDEP="ncurses systemd"
BUILDDEP="libdrm"
BUILDDEP__AMD64="${BUILDDEP} nvidia"
BUILDDEP__ARM64="${BUILDDEP__AMD64}"
PKGSUG="libdrm"
PKGSUG__AMD64="${PKGSUG} nvidia"
PKGSUG__ARM64="${PKGSUG__AMD64}"
PKGDES="A (h)top like task monitor for NVIDIA, AMD and Intel GPUs"

CMAKE_AFTER__LOONGSON3="-DNVIDIA_SUPPORT=off"
CMAKE_AFTER__MIPS64R6EL="${CMAKE_AFTER__LOONGSON3}"
CMAKE_AFTER__PPC64EL="${CMAKE_AFTER__LOONGSON3}"
CMAKE_AFTER__RISCV64="${CMAKE_AFTER__LOONGSON3}"
