echo "Creating daemon owners for Cockpit ..."
systemd-sysusers cockpit-ws.conf
systemd-sysusers cockpit-wsinstance.conf

echo "Creating tmpfiles for Cockpit ..."
systemd-tmpfiles --create cockpit-ws.conf

echo "Applying presets for Cockpit systemd units ..."
systemctl preset --now \
    cockpit.socket \
    pmlogger.service \
    tuned.service
