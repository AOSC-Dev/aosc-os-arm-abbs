abinfo "Installing .desktop entry ..."
install -Dvm644 "$SRCDIR"/../deploykit.desktop \
    "$PKGDIR"/usr/share/applications/deploykit.desktop

abinfo "Installing background music (BGM) ..."
mkdir -pv "$PKGDIR"/usr/share/deploykit-gui
cp -av "$SRCDIR"/../bgm \
    "$PKGDIR"/usr/share/deploykit-gui/
