PKGNAME=xfsprogs
PKGSEC=utils
PKGDEP="icu inih liburcu util-linux"
PKGDES="XFS filesystem utilities"

ABSHADOW=0
RECONF=0
NOPARALLEL=1

AUTOTOOLS_AFTER="--enable-shared \
                 --enable-gettext \
                 --enable-blkid \
                 --enable-editline \
                 --disable-termcap \
                 --enable-lib64 \
                 --enable-librt \
                 --disable-ubsan \
                 --disable-addrsan \
                 --disable-threadsan \
                 --enable-lto \
                 --enable-scrub \
                 --enable-libicu"
MAKE_AFTER="DIST_ROOT=$PKGDIR \
            PKG_ROOT_SBIN_DIR=/usr/bin"
