abinfo "Installing .desktop entries and AppData XMLs ..."
install -Dvm644 "$SRCDIR"/build/gtk2_ardour/ardour${PKGVER:0:1}.desktop \
    "$PKGDIR"/usr/share/applications/ardour${PKGVER:0:1}.desktop
install -Dvm644 "$SRCDIR"/build/gtk2_ardour/ardour${PKGVER:0:1}.appdata.xml \
    "$PKGDIR"/usr/share/appdata/ardour${PKGVER:0:1}.appdata.xml
install -Dvm644 "$SRCDIR"/gtk2_ardour/ardour-mime-info.xml \
    "$PKGDIR"/usr/share/mime/packages/ardour.xml
