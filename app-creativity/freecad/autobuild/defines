PKGNAME=freecad
PKGDEP="med hdf5 opencascade vtk glew boost coin xerces-c pyside2 libspnav matplotlib pcl pivy ply fmt"
PKGSUG="openscad"
BUILDDEP="swig pybind11 eigen-3"
PKGSEC="graphics"
PKGDES="Parametric 3D CAD modeler"

ABTYPE=cmakeninja

CMAKE_AFTER="-DCMAKE_SKIP_INSTALL_RPATH=OFF \
             -DCMAKE_INSTALL_PREFIX=/usr/lib/freecad \
             -DCMAKE_INSTALL_BINDIR=/usr/lib/freecad/bin \
             -DCMAKE_INSTALL_DATADIR=/usr/share/freecad \
             -DCMAKE_INSTALL_DATAROOTDIR=/usr/share \
             -DCMAKE_INSTALL_DOCDIR=/usr/share/freecad/doc \
             -DCMAKE_INSTALL_LIBDIR=/usr/lib/freecad/lib \
             -DPYTHON_EXECUTABLE=/usr/bin/python3 \
             -DINSTALL_TO_SITEPACKAGES=ON \
             -DFREECAD_USE_PCL=OFF \
             -DFREECAD_USE_PYBIND11=ON \
             -DFREECAD_USE_QT_FILEDIALOG=OFF \
             -DFREECAD_USE_FREETYPE=ON \
             -DFREECAD_USE_EXTERNAL_PIVY=OFF \
             -DBUILD_ADDONMGR=ON \
             -DBUILD_ARCH=ON \
             -DBUILD_ASSEMBLY=OFF \
             -DBUILD_CLOUD=ON \
             -DBUILD_COMPLETE=OFF \
             -DBUILD_DRAFT=ON \
             -DBUILD_DESIGNER_PLUGIN=ON \
             -DBUILD_DRAWING=ON \
             -DBUILD_FEM=ON \
             -DBUILD_FEM_NETGEN=OFF \
             -DBUILD_FLAT_MESH=ON \
             -DBUILD_FORCE_DIRECTORY=ON \
             -DBUILD_FREETYPE=ON \
             -DBUILD_GUI=ON \
             -DBUILD_IDF=ON \
             -DBUILD_IMAGE=ON \
             -DBUILD_IMPORT=ON \
             -DBUILD_INSPECTION=ON \
             -DBUILD_JTREADER=OFF \
             -DBUILD_MATERIAL=ON \
             -DBUILD_MESH=ON \
             -DBUILD_MESH_PART=ON \
             -DBUILD_OPENSCAD=ON \
             -DBUILD_PART=ON \
             -DBUILD_PART_DESIGN=ON \
             -DBUILD_PATH=ON \
             -DBUILD_POINTS=ON \
             -DBUILD_QT5=ON \
             -DBUILD_RAYTRACING=ON \
             -DBUILD_REVERSEENGINEERING=OFF \
             -DBUILD_ROBOT=ON \
             -DBUILD_SHOW=ON \
             -DBUILD_SKETCHER=ON \
             -DBUILD_SMESH=ON \
             -DBUILD_SPREADSHEET=ON \
             -DBUILD_START=ON \
             -DBUILD_SURFACE=ON \
             -DBUILD_TECHDRAW=ON \
             -DBUILD_TEST=ON \
             -DBUILD_TUX=ON \
             -DBUILD_VR=OFF \
             -DBUILD_WEB=OFF"
# Note: These architectures has QtWebEngine support, build Web modules here.
CMAKE_AFTER__WEBENGINE=" \
             ${CMAKE_AFTER} \
             -DBUILD_WEB=ON"
CMAKE_AFTER__AMD64="${CMAKE_AFTER__WEBENGINE}"
CMAKE_AFTER__ARM64="${CMAKE_AFTER__WEBENGINE}"
