PKGNAME="fend"
PKGDES="A multi-function command-line calculator"
PKGDEP="glibc gcc-runtime"

PKGDEP__TIER2="$PKGDEP openssl"
PKGDEP__LOONGSON3="$PKGDEP__TIER2"
PKGDEP__PPC64EL="$PKGDEP__TIER2"
PKGDEP__RISCV64="$PKGDEP__TIER2"

BUILDDEP="rustc llvm"
PKGSEC="utils"

CARGO_AFTER="-p fend"
CARGO_AFTER__TIER2="$CARGO_AFTER --no-default-features --features native-tls"
CARGO_AFTER__LOONGSON3="$CARGO_AFTER__TIER2"
CARGO_AFTER__RISCV64="$CARGO_AFTER__TIER2"
CARGO_AFTER__PPC64EL="$CARGO_AFTER__TIER2"

USECLANG=1
ABSPLITDBG=0

# ld.lld does not support loongson3
USECLANG__LOONGSON3=0
NOLTO__LOONGSON3=1
NOLTO__MIPS64R6EL=1
