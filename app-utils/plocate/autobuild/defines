PKGNAME=plocate
PKGSEC=utils
PKGDES="A much faster locate"
PKGDEP="liburing zstd" # enables io_uring feature for better performance

PKGCONFL=mlocate
PKGREP=mlocate

ABTYPE=meson

MESON_AFTER="-Dinstall_systemd=true\
             -Dinstall_cron=false\
             -Dlocategroup=plocate\
             -Ddbpath=plocate/plocate.db"
