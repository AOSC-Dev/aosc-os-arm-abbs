             -DBUILD_kglobalaccel=OFF \
             -DBUILD_kuiserver=OFF \
             -DLIB_INSTALL_DIR=/usr/lib \
             -DQT_QMAKE_EXECUTABLE=/usr/lib/qt4/bin/qmake \
             -Wno-dev"
