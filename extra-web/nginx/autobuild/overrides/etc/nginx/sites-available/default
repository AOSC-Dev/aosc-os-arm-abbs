# Default site configuration

# Any unmatched requests should go here
server {
	listen 80 default_server;
	listen [::]:80 default_server;

	server_name _;

	root /srv/www;
	index index.nginx.html index.html;

	location / {
		try_files $uri $uri/ =404;
	}
}

