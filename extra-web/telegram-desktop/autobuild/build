cd "$SRCDIR"/../Libraries/qt5_6_0/qtbase
./configure \
    -prefix "$SRCDIR/../qt" \
    -release \
    -force-debug-info \
    -opensource \
    -confirm-license \
    -system-zlib \
    -system-libpng \
    -system-libjpeg \
    -system-freetype \
    -system-harfbuzz \
    -system-pcre \
    -system-xcb \
    -system-xkbcommon-x11 \
    -no-gtkstyle \
    -static \
    -nomake examples \
    -nomake tests
make
make install

export PATH="$SRCDIR/../qt/bin:$PATH"

cd "$SRCDIR"/../Libraries/qt5_6_0/qtimageformats
qmake .
make
make install

cd "$SRCDIR"/../Libraries/qt5_6_0/qtwayland
qmake .
make
make install

# Telegram's CMake needs full path.
export CC="/usr/bin/gcc"
export CXX="/usr/bin/g++"
export ASM="/usr/bin/as"

export LDFLAGS="${LDFLAGS} -lQt5WaylandClient"
export CXXFLAGS="${CXXFLAGS} -lQt5WaylandClient"

cd "$SRCDIR"/Telegram
gyp/refresh.sh
cd "$SRCDIR"

mkdir -p "$SRCDIR"/out/Release
cd "$SRCDIR"/out/Release

make
chrpath --delete "$SRCDIR"/out/Release/Telegram

install -Dm755 "$SRCDIR"/Linux/Release/Telegram "$PKGDIR"/usr/bin/telegram-desktop

local icon_size icon_dir
for icon_size in 16 32 48 64 128 256 512; do
	icon_dir="$PKGDIR/usr/share/icons/hicolor/${icon_size}x${icon_size}/apps"

	install -d "$icon_dir"
	install -m644 "$SRCDIR"/Telegram/Resources/art/icon${icon_size}.png "$icon_dir"/telegram-desktop.png
done
