#. autobuild/patch
if [ "$SKIPCONFIG" = "yes" ]
then
true
else
./configure --sysroot=/var/ab/cross-root/armel --target=armv7a-hardfloat-linux-gnueabi -Dusethreads -Duseshrplib \
    -Dprefix=/usr -Dvendorprefix=/usr \
    -Dman1dir=/usr/share/man/man1 \
    -Dman3dir=/usr/share/man/man3 
fi
make $ABMK &&
make install DESTDIR=`pwd`/abdist 
pushd abdist
ln -sv perl5/5.20.2/armv7a-linux/CORE/libperl.so usr/lib/
popd
