PKGNAME=libsixel
PKGSEC=libs
PKGDEP="curl gdk-pixbuf libgd libjpeg-turbo libpng python-3"
PKGDES="A SIXEL (terminal graphics and printing format by DEC) codec implementation"

# FIXME: Python support is broken upstream
