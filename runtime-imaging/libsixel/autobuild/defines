    '-Dimg2sixel=disabled'
    '-Dsixel2png=disabled'
    '-Dtests=disabled'
    '-Dgdk-pixbuf2=enabled'
    '-Dgd=enabled'
    '-Dlibcurl=enabled'
    '-Djpeg=enabled'
    '-Dpng=enabled'
)
