PKGNAME=openimageio
PKGSEC=libs
PKGDEP="boost glew jasper libraw libtiff opencolorio opencv openexr openssl \
		pugixml libheif tbb openvdb python-3 giflib imath freetype"
BUILDDEP="cmake pybind11"
PKGDES="A library for reading and writing images, including classes, utilities, and applications"

CMAKE_AFTER="
	-DUSE_EXTERNAL_PUGIXML=ON
	-DOIIO_BUILD_TOOLS=ON
	-DUSE_PYTHON=ON
	-DUSE_FFMPEG=OFF
	-DBUILD_DOCS=ON
	-DINSTALL_DOCS=ON
	-DINSTALL_FONTS=OFF
	-DUSE_QT=OFF
	-DUSE_PTEX=OFF
	-DBUILD_TESTING=OFF
	-DOIIO_BUILD_TESTS=OFF
	-DOIIO_DOWNLOAD_MISSING_TESTDATA=OFF
"

# Break old blender due to updated sonames.
PKGBREAK="blender<=3.2.2"
# ... and other deprecated packages
PKGKBREAK+=" luxrays<=1.6-7 luxrender<=1.6-5"

ABTYPE=cmakeninja
