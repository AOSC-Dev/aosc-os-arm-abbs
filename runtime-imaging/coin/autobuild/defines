PKGNAME=coin
PKGDES="3D graphics library based on Open Inventor API"
PKGSEC=libs
PKGDEP="glu zlib bzip2 openal-soft freetype fontconfig libglvnd"
BUILDDEP="boost"

ABTYPE=cmakeninja
CMAKE_AFTER="-DCOIN_BUILD_DOCUMENTATION=OFF \
             -DCOIN_THREADSAFE=ON -DUSE_EXTERNAL_EXPAT=ON \
             -DHAVE_VRML97=ON -DCOIN_HAVE_JAVASCRIPT=OFF \
             -DHAVE_NODEKITS=ON -DHAVE_DRAGGERS=ON \
             -DHAVE_MANIPULATORS=ON -DHAVE_SOUND=ON \
             -DHAVE_3DS_IMPORT_CAPABILITIES=ON
             -DUSE_SUPERGLU=OFF \
             -DFONTCONFIG_RUNTIME_LINKING=OFF \
             -DFREETYPE_RUNTIME_LINKING=OFF \
             -DLIBBZIP2_RUNTIME_LINKING=OFF \
             -DOPENAL_RUNTIME_LINKING=OFF \
             -DSIMAGE_RUNTIME_LINKING=OFF \
             -DZLIB_RUNTIME_LINKING=OFF \
             -DGLU_RUNTIME_LINKING=OFF" 
