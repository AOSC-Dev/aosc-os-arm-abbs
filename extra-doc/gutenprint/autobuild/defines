PKGNAME=gutenprint
PKGSEC=graphics
PKGDEP="cups ghostscript libusb ijs"
BUILDDEP="gimp"
PKGDES="Top quality printer drivers for POSIX systems"

ABRPMAUTOPROVONLY=yes
AUTOTOOLS_AFTER="--disable-samples \
                 --enable-escputil \
                 --enable-cups-1_2-enhancements \
                 --disable-cups-ppds \
                 --enable-simplified-cups-ppds \
                 --disable-foomatic \
                 --enable-ghostscript"
ABSHADOW=no
