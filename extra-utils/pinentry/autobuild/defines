PKGNAME=pinentry
PKGSEC=utils
PKGDEP="ncurses libcap libsecret"
PKGDES="a collection of simple PIN or passphrase entry dialogs which utilize the Assuan protocol"
AUTOTOOLS_AFTER="--enable-pinentry-curses --disable-pinentry-gtk --disable-pinentry-qt \
                 --disable-pinentry-gtk2 --disable-pinentry-qt4 --enable-fallback-curses \
                 --disable-pinentry-gnome3"
