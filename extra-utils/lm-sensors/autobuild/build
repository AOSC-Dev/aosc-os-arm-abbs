make PREFIX=/usr LIBDIR=/usr/lib MANDIR=/usr/share/man EXLDFLAGS="${LDFLAGS}" \
     PROG_EXTRA=sensord CFLAGS="${CPPFLAGS} ${CFLAGS} ${LDFLAGS}" user
make BUILD_STATIC_LIB=0 PREFIX=/usr LIBDIR=/usr/lib MANDIR=/usr/share/man EXLDFLAGS="${LDFLAGS}" \
     PROG_EXTRA=sensord DESTDIR="$PKGDIR" user_install
