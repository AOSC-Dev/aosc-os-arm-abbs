abinfo "Generating cheksum data for asset downloading ..."
VER=22.5.3
cat > release-$VER.sha256 << EOF
00daf3698e17ac3ac788d529877c03ee80c3790472a85d0ed063ac3a354c37b1 release-v$VER.tar.gz
EOF

abinfo "Downloading assets ..."
wget https://github.com/wting/autojump/archive/release-v$VER.tar.gz || \
abdie "Failed fetching release-v$VER."
sha256sum -c release-$VER.sha256 || abdie "Failed checksuming."

abinfo "Extracting asset packages ..."
tar -xf release-v$VER.tar.gz

abinfo "Installing assets ..."
pushd autojump-release-v$VER
mkdir -pv "$PKGDIR"/etc/bashrc.d
install -Dvm644 bin/autojump.bash "$PKGDIR"/etc/bashrc.d/40-autojump-rs
popd
# TODO figure out where to put files necessary for autojump to work with
# other shells.
