# build script copied from Arch Linux
abinfo "Building premake ..."
cd "$SRCDIR/build/gmake2.unix"
make STRIP="true" config=release

abinfo "Installing premake and LISENSE file"
cd "$SRCDIR"
install -Dvm755 "bin/release/premake5" "${PKGDIR}/usr/bin/premake5"
install -Dvm644 LICENSE.txt "$PKGDIR/usr/share/licenses/$PKGNAME/LICENSE"
