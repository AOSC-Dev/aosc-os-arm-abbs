# build script copied from Arch Linux
abinfo "Building premake ..."
cd "$SRCDIR/build/gmake2.unix"
make STRIP="true" config=release

abinfo "Installing premake and LICENSE file"
cd "$SRCDIR"
install -Dvm755 "$SRCDIR/bin/release/premake5" "${PKGDIR}/usr/bin/premake5"
install -Dvm644 "$SRCDIR"/LICENSE.txt "$PKGDIR/usr/share/licenses/$PKGNAME/LICENSE"
