# build script copied from Arch Linux
abinfo "Building premake ..."
cd "build/gmake2.unix"
make STRIP="ture" config=release

abinfo "Installing premake and LISENSE"
cd ../..
install -Dm755 "bin/release/premake5" "${PKGDIR}/usr/bin/premake5"
install -Dm644 LICENSE.txt "$PKGDIR/usr/share/licenses/$PKGNAME/LICENSE"
