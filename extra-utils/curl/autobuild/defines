PKGNAME=curl
PKGSEC=utils
PKGDEP="openssl zlib"
PKGRECOM="ca-certs"
PKGDES="an URL retrieval utility and library"

AUTOTOOLS_AFTER="--mandir=/usr/share/man --disable-ldap --disable-ldaps --enable-ipv6 --enable-manual --enable-versioned-symbols --enable-threaded-resolver --without-libidn --with-random=/dev/urandom --with-ca-bundle=/etc/ssl/ca-bundle.crt --disable-ssh"
ABSHADOW=no
