         if 'auto_hide' == path:
             self.refresh_operations = True
         if 'dark_mode' == path:
@@ -110,38 +104,6 @@ class PreferencesDialog:
 
         vbox = Gtk.Box(orientation=Gtk.Orientation.VERTICAL)
 
-        if online_update_notification_enabled:
