abinfo "Building unzip ..."
make -f "$SRCDIR"/unix/Makefile \
    prefix=/usr \
    D_USE_BZ2=-DUSE_BZIP2 \
    L_BZ2=-lbz2 \
    LOCAL_UNZIP="${CFLAGS} ${CPPFLAGS} -I. ${DEFINES}" \
    generic

abinfo "Installing unzip ..."
make install -f "$SRCDIR"/unix/Makefile \
    BINDIR="$PKGDIR"/usr/bin \
    MANDIR="$PKGDIR"/usr/share/man
