abinfo "Dropping linking flag to strip symbols ..."
sed -e '/LF2     =/d' \
    -i unix/Makefile

abinfo "Appending Autobuild3 flags ..."
export CFLAGS="${CPPFLAGS} ${LDFLAGS} ${CFLAGS} -D_FILE_OFFSET_BITS=64 -DACORN_FTYPE_NFS \
               -DWILD_STOP_AT_DIR -DLARGE_FILE_SUPPORT -DUNICODE_SUPPORT \
               -DUNICODE_WCHAR -DUTF8_MAYBE_NATIVE -DNO_LCHMOD -DDATE_FORMAT=DF_YMD \
               -DUSE_BZIP2 -DNATIVE"
export LFLAGS2="${LDFLAGS}"

abinfo "Fixing manpage installation path ..."
sed -e "/MANDIR =/s#)/#)/share/#" \
    -i "$SRCDIR"/unix/Makefile
