QTPROJ_AFTER="USE_SYSTEM_HUNSPELL=1 \
              USE_SYSTEM_QTSINGLEAPPLICATION=1 \
              LIBS+=-lQt5Solutions_SingleApplication-head \
              LIBS-=-lQtSolutions_SingleApplication-head \
              INTERNAL_TERMINAL=1 \
              USE_SYSTEM_QUAZIP=1 \
              QUAZIP_LIB=-lquazip5 \
              QUAZIP_INCLUDE=$INCLUDE/quazip5/"
