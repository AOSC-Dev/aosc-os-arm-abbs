INSTALL_USER=root  \
INSTALL_GROUP=root \
./configure --host=armv7a-hardfloat-linux-gnueabi --prefix=/usr --libdir=/usr/lib --libexecdir=/usr/lib &&
make $ABMK &&
make install install-dev install-lib DIST_ROOT=`pwd`/abdist &&
rm -f abdist/usr/lib/libattr.a &&
chmod 755 abdist/usr/lib/libattr.so.*.*.* &&
rm -rf abdist/usr/share/man/man2 &&
mkdir abdist/lib 
mv -v abdist/usr/lib/libattr.so.* abdist/lib &&
ln -sfv ../../lib/libattr.so.1 abdist/usr/lib/libattr.so 
