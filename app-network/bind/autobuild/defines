PKGNAME=bind
PKGSEC=net
PKGDEP="openssl libidn2 libxml2 nghttp2 jemalloc gnupg libuv krb5 lmdb json-c \
        libmaxminddb fstrm protobuf-c"
BUILDDEP="sphinx"
PKGPROV="dnsutils dig nslookup"
PKGDES="Internet Domain Name Server (from ISC)"

ABTYPE=autotools
AUTOTOOLS_AFTER="PYTHON=/usr/bin/python3 \
                 --sysconfdir=/etc/named \
                 --enable-shared \
                 --disable-static \
                 --with-gssapi=yes \
                 --with-libidn2 \
                 --with-json-c \
                 --with-lmdb \
                 --with-gnu-ld \
                 --with-maxminddb \
                 --with-pic \
                 --with-tuning=large \
                 --enable-fixed-rrset \
                 --enable-full-report \
                 --enable-dnstap"

PKGEPOCH=1
