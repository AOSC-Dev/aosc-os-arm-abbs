abinfo "Importing DirectX-Headers as subproject ..."
cp -rv "$SRCDIR"/../dxheaders $SRCDIR/subprojects/DirectX-Headers-1.0

if ab_match_arch loongarch64; then
    abinfo "FIXME: -mtls-dialect=desc is broken on LoongArch with GCC 14 currently..."
    abinfo "Injecting -mtls-dialect=trad to force traditional TLS ..."
    export CFLAGS="$CFLAGS -mtls-dialect=trad"
fi
