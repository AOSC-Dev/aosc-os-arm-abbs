if [[ "${CROSS:-$ARCH}" = "armv4" || \
      "${CROSS:-$ARCH}" = "armv6hf" || \
      "${CROSS:-$ARCH}" = "armv7hf" ]]; then
    abinfo "Appending -fPIC to fix build on 32-bit ARM architectures ..."
    export CXXFLAGS="${CXXFLAGS} -fPIC"
    export CFLAGS="${CFLAGS} -fPIC"
    export LDFLAGS="${LDFLAGS} -fPIC"
fi
