PKGNAME=minetest
PKGDES="Minetest, a sandbox game inspired by Minecraft"
PKGSEC=games
PKGDEP="irrlicht openal-soft libvorbis libogg postgresql luajit"
PKGDEP__PPC64="${PKGDEP/luajit/lua}"
PKGDEP__PPC64EL="${PKGDEP/luajit/lua}"
BUILDDEP="cmake doxygen"

ABTYPE=cmake
CMAKE_AFTER="-DENABLE_GETTEXT=1 \
             -DENABLE_FREETYPE=1 \
             -DLUA_INCLUDE_DIR=/usr/include/luajit-2.1"

NOLTO__ARM64=1
AB_FLAGS_O3=1

PKGBREAK="minetest-game<=0.4.16"
PKGREP="minetest-game<=0.4.16"
