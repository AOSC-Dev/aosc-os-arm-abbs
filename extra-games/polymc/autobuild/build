abinfo "Building polymc ..."
mkdir -pv "$BLDDIR"
cd "$BLDDIR"
cmake "$SRCDIR" -DCMAKE_BUILD_TYPE=Release \
      -DCMAKE_INSTALL_PREFIX=/usr \
      -DLauncher_BUILD_PLATFORM="AOSC OS" \
      -DENABLE_LTO=on
cmake --build "$BLDDIR"

abinfo "Installing polymc ..."
DESTDIR="$PKGDIR" cmake --install "$BLDDIR"
