PKGNAME=dolphin-emu
PKGSEC=games
PKGDEP="bluez enet ffmpeg libao libevdev lzo mbedtls miniupnpc \
        openal-soft portaudio pugixml pulseaudio sdl2 sfml soundtouch qt-5 \
        xdg-utils hidapi"
BUILDDEP="appstream-glib cmake"
PKGDES="A Gamecube/Wii emulator"

CMAKE_AFTER="-DENABLE_LTO=TRUE \
             -DENABLE_WX=OFF \
             -DUSE_SHARED_ENET=TRUE \
             -DUSE_SHARED_GTEST=TRUE \
             -DDISTRIBUTOR=AOSC"
CMAKE_AFTER__NOJIT="${CMAKE_AFTER} \
                    -DENABLE_GENERIC=ON"
CMAKE_AFTER__LOONGSON3="${CMAKE_AFTER__NOJIT}"
CMAKE_AFTER__PPC64EL="${CMAKE_AFTER__NOJIT}"
NOLTO__LOONGSON3=1

ABSHADOW=0
PKGEPOCH=1
