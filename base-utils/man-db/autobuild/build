./configure --prefix=/usr \
            --sysconfdir=/etc \
            --libexecdir=/usr/lib \
            --with-db=gdbm \
	    --disable-setuid \
	    --enable-mandirs=GNU \
	    --with-sections="1 n l 8 3 0 2 5 4 9 6 7"
make
make DESTDIR="$PKGDIR" install

rm -f "$PKGDIR"/usr/bin/zsoelim

# Avoid a DPKG warning.
mkdir -p "$PKGDIR"/var/cache/man
