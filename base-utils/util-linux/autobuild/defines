PKGNAME=util-linux
PKGSEC=utils
PKGDES="base utilties for linux"
PKGDEP="glibc ncurses zlib shadow linux-pam python-3"

AUTOTOOLS_AFTER="--localstatedir=/run \
                 --enable-fs-paths-extra=/usr/bin \
                 --enable-raw \
                 --disable-chfn-chsh \
                 --disable-login \
                 --disable-nologin \
                 --disable-su \
                 --disable-newgrp \
                 --enable-write \
                 --enable-mesg \
                 --enable-libmount-force-mountinfo \
                 --enable-socket-activation \
                 --with-python=3"
