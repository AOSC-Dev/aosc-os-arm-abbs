PKGNAME=linux-kernel-surface-${__VER}
PKGSEC=kernel
PKGDEP="iptsd"
BUILDDEP="bc git pahole parallel kernel-build-common"
BUILDDEP__AMD64="$BUILDDEP llvm"
# linux-surface does not (publicly announced) support for ARM based Surface
# tablets. Limiting this kernel to amd64-only.
# To be enabled (in the future)
# BUILDDEP__ARM64="$BUILDDEP llvm"
PKGDES="AOSC OS Mainline Linux Kernel v${__VER} for x86 Surface devices"

ABSTRIP=0
ABELFDEP=0
FAIL_ARCH="!(amd64)"

PKGBREAK="
	zfs<=2.2.0
	nvidia<=530.41.03
	virtualbox<=7.0.8
"
