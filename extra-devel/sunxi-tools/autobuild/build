abinfo "Making ..."
make EXTRA_CFLAGS="${CPPFLAGS} ${CFLAGS}"

abinfo "Installing ..."
mkdir -pv "$PKGDIR/usr/bin"
cp -v "$SRCDIR"/{sunxi-bootinfo,sunxi-fel,sunxi-fexc,sunxi-nand-part,sunxi-pio} "$PKGDIR/usr/bin/"
ln -sv sunxi-fexc "$PKGDIR/usr/bin/fex2bin"
ln -sv sunxi-fexc "$PKGDIR/usr/bin/bin2fex"
mkdir -pv "$PKGDIR/usr/share/man/man1"
cp -v "$SRCDIR"/sunxi-fel.1 "$PKGDIR/usr/share/man/man1/"
mkdir -pv "$PKGDIR/usr/share/sunxi-tools"
cp -v "$SRCDIR"/bin/* "$PKGDIR/usr/share/sunxi-tools/"
