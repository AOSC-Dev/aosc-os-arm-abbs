abinfo "Installing bats files ..."
install -dvm 755 "${PKGDIR}"/usr/{bin,libexec/bats-core,lib/bats-core,share/man/man{1,7}}
install -vm 755 "${SRCDIR}/bin"/* "${PKGDIR}/usr/bin"
install -vm 755 "${SRCDIR}/libexec/bats-core"/* "${PKGDIR}/usr/libexec/bats-core"
install -vm 755 "${SRCDIR}/lib/bats-core"/* "${PKGDIR}/usr/lib/bats-core"
install -vm 644 "${SRCDIR}/man/bats.1" "${PKGDIR}/usr/share/man/man1"
install -vm 644 "${SRCDIR}/man/bats.7" "${PKGDIR}/usr/share/man/man7"
