make prefix=/usr gitexecdir=/usr/lib/git-core \
     CFLAGS="$CFLAGS" LDFLAGS="$LDFLAGS" \
     USE_LIBPCRE=1 \
     NO_CROSS_DIRECTORY_HARDLINKS=1 \
     MAN_BOLD_LITERAL=1 all doc

make -C contrib/emacs prefix=/usr
make -C contrib/credential/gnome-keyring
make -C contrib/subtree prefix=/usr all

make prefix=/usr gitexecdir=/usr/lib/git-core \
     CFLAGS="$CFLAGS" LDFLAGS="$LDFLAGS" \
     USE_LIBPCRE=1 \
     NO_CROSS_DIRECTORY_HARDLINKS=1 \
     MAN_BOLD_LITERAL=1 \
     DESTDIR=`pwd`/abdist install install-doc

mkdir -p abdist/usr/share/bash-completion/completions/
install -m644 ./contrib/completion/git-completion.bash abdist/usr/share/bash-completion/completions/git

mkdir -p abdist/usr/share/git/
install -m644 ./contrib/completion/git-prompt.sh abdist/usr/share/git/git-prompt.sh

install -m755 contrib/credential/gnome-keyring/git-credential-gnome-keyring \
    abdist/usr/lib/git-core/git-credential-gnome-keyring
make -C contrib/credential/gnome-keyring clean

make -C contrib/subtree prefix=/usr DESTDIR=`pwd`/abdist install install-doc

cp -a ./contrib/* abdist/usr/share/git/
