pushd build_unix
../dist/configure --prefix=/usr      \
                  --enable-compat185 \
                  --enable-dbm       \
                  --enable-cxx       \
                  --enable-shared    \
                  --enable-static    \
                  --disable-tcl &&
make LIBSO_LIBS=-lpthread $ABMK &&
make DESTDIR=`pwd`/../abdist install
rm -rf ../abdist/usr/docs
popd
