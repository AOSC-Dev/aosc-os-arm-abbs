abinfo "Creating nvm bashrc..."

cat << 'EOF' > aosc_nvm_stub.sh
export NVM_DIR="${HOME}/.nvm"

EOF
cat aosc_nvm_stub.sh nvm.sh > nvm_aosc.sh

abinfo "Installing nvm shell startup files, bash completion and doc..."
install -Dvm644 nvm_aosc.sh "${PKGDIR}/etc/bashrc.d/30-nvm.sh"
install -Dvm644 bash_completion "${PKGDIR}/usr/share/bash-completion/completions/nvm"
install -dv "${PKGDIR}/etc/zsh/zshrc.d"
ln -vs ../../bashrc.d/30-nvm.sh "${PKGDIR}/etc/zsh/zshrc.d/30-nvm"
install -dv "${PKGDIR}/usr/share/doc/nvm/"
cp -v *.md "${PKGDIR}/usr/share/doc/nvm/"
