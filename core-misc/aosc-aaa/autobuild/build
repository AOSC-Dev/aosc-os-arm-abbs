abinfo "Creating system skeleton ..."
#
# A derivative of Linux From Scratch system directory template.
# Refer to Chapter 6, Section 5 of Linux From Scratch for original
# design.
#
# This is NOT a fully FHS compliant directory tree.
#

mkdir "$PKGDIR"

mkdir -pv "$PKGDIR"/{boot,etc,home,usr/lib/firmware,mnt,opt}
mkdir -pv "$PKGDIR"/{media/{floppy,cdrom},srv,var}
install -dv -m 0750 "$PKGDIR"/root
install -dv -m 1777 "$PKGDIR"/tmp "$PKGDIR"/var/tmp
mkdir -pv "$PKGDIR"/usr{,/local}/{bin,include,lib,src}
mkdir -pv "$PKGDIR"/usr/share/{doc,info,locale,man}
mkdir -v  "$PKGDIR"/usr/share/{misc,terminfo,zoneinfo}
mkdir -v  "$PKGDIR"/usr/libexec
mkdir -pv "$PKGDIR"/usr/share/man/man{1..8}

mkdir -v "$PKGDIR"/var/{log,mail,spool}
ln -sv /run "$PKGDIR"/var/run
ln -sv /run/lock "$PKGDIR"/var/lock
mkdir -pv "$PKGDIR"/var/{opt,cache,local}

#
# Avoid confusion.
#
ln -sv usr/lib "$PKGDIR"/lib
case ${CROSS:-$ARCH} in
	(*n32*)
		ln -sv usr/lib "$PKGDIR"/lib32
		ln -sv lib "$PKGDIR"/usr/lib32
		ln -sv ../lib "$PKGDIR"/usr/lib/32;;
	(*64*|loongson3)
		ln -sv usr/lib "$PKGDIR"/lib64
		ln -sv lib "$PKGDIR"/usr/lib64
		ln -sv ../lib "$PKGDIR"/usr/lib/64;;
	(*)
		;;
esac
ln -sv usr/bin "$PKGDIR"/bin
ln -sv usr/bin "$PKGDIR"/sbin
ln -sv bin "$PKGDIR"/usr/sbin

#
# Linux From Scratch Chapter 6, Section 2.
#
mkdir -pv "$PKGDIR"/{dev,proc,sys,run}
install -dv -m 1777 "$PKGDIR"/dev/shm

if ab_match_archgroup mainline; then
    DISTRO="AOSC OS"
    DISTRO_COLOR="1;36"
elif ab_match_archgroup retro; then
    DISTRO="Afterglow"
    DISTRO_COLOR="1;91"
else
    aberr "Unrecognized architecture, bailing ..."
fi

abinfo "Generating /etc/lsb-release ..."
cat > "$PKGDIR"/etc/lsb-release << EOF
# FSG lsb_release configuration file template
# If the distribution is LSB compliant, uncomment the following line
# and set the version appropriately
# LSB_VERSION=""
DISTRIB_ID="${DISTRO}"
DISTRIB_CODENAME="${__CODENAME}"
DISTRIB_RELEASE="${PKGVER}"
DISTRIB_DESCRIPTION="${DISTRO}"
EOF

abinfo "Generating /etc/issue ..."
cat > "$PKGDIR"/etc/issue << EOF
\n - ${DISTRO} ${PKGVER} / Kernel \r (\l)
EOF

abinfo "Generating /etc/os-release ..."
cat > "$PKGDIR"/etc/os-release << EOF
PRETTY_NAME="${DISTRO} (${PKGVER})"
NAME="${DISTRO}"
VERSION_ID="${PKGVER}"
VERSION="${PKGVER} (${__CODENAME})"
BUILD_ID="${__BUILD_ID}"
ID=aosc
ANSI_COLOR="${DISTRO_COLOR}"
HOME_URL="https://aosc.io/"
SUPPORT_URL="https://github.com/AOSC-Dev/aosc-os-abbs"
BUG_REPORT_URL="https://github.com/AOSC-Dev/aosc-os-abbs/issues"
EOF

abinfo "Generating postinst splash ..."
cat >> "$SRCDIR"/autobuild/postinst << "EOF"
norm="\e[0;0m"
gray="\e[0;37m"
dark="\e[0;90m"
drkr="\e[0;40;38;5;240m"
lght="\e[0;40;38;5;254m"
brgt="\e[0;1;40;38;5;255m"
blck="\e[0;38;5;0m\e[48;5;0m"
orng="\e[0;40;38;5;172m"
gren="\e[0;32m"
lgrn="\e[0;40;38;5;118m"
rred="\e[5;31m"

echo -e "\
${blck}                                                                               ${norm}
${blck}          ${dark}ggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggg${blck}${norm}
${blck}       ${dark}ggg${lght}9999999999999999999999999999999999999999999999999999999999999${dark}@@${drkr}ggw${norm}
${blck}     ${dark}ggg${lght}//////////////////////////////////////////////////////////////${dark}@@@${drkr}BBK${norm}
${blck}  ${dark}j@@@${brgt}MMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMM${dark}@@@@@${drkr}BBK${norm}
${blck}  ${dark}|@@${brgt}MMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMM${dark}@@@@@@@${drkr}BBK${norm}
${blck}  ${dark}|@@${brgt}MMM${lght}||||||||||||||||||||||||||||||||||||||||||||||${lgrn}@@@@@@@${lght}|||||${dark}@@@@@@@${drkr}BBK${norm}
${blck}  ${dark}|@@${brgt}MMM${lght}||||||||||||||||||||||||||||||||||||||||||||||${gren}BBBBBBB${lght}|||||${dark}@@@@@@@${drkr}BBK${norm}
${blck}  ${dark}|@@${brgt}MMM${lght}||||||||||||||||||||||||||||||||||||||||||||||||||||||||||${dark}@@@@@@@${drkr}BBK${norm}
${blck}  ${dark}|@@${brgt}MMM${lght}||${dark}NNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNNN${lght}|||||${dark}@@@@@@@${drkr}BBK${norm}
${blck}  ${dark}|@@${brgt}MMM${lght}||${brgt}MMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMM${lght}|||||${dark}@@@@@@@${drkr}BBK${norm}
${blck}  ${dark}|@@${brgt}MMM${lght}||${dark}ggggggggggggggggggggggggggggggggggggggggggggggggggg${lght}|||||${dark}@@@@@@@${drkr}BBK${norm}
${blck}  ${dark}|@@${brgt}MMM${lght}||${brgt}MMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMMM${lght}|||||${dark}@@@@@@@${drkr}BBK${norm}
${blck}  ${dark}|@@${brgt}MMM${lght}||||||||||||||||||||||||||||||||||||||||||||||||||||||||||${dark}@@@@@${drkr}WWPP^${norm}
${blck}  ${dark}|@@${brgt}MMM${lght}||||||||||||||||||||||||||||||||||||||||||||||||||||||||||${dark}@@g${drkr}MMMM${norm}
${blck}  ${dark}|MMggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggg${drkr}RRRRR${norm}
${blck}     ${drkr}BBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBh${norm}
${blck}                                  ${drkr}8BK${dark}@@${drkr}BBP${norm}
${blck}                                  ${dark}[@E  ${drkr}BBP${norm}
${blck}                      ${rred}@@@@@@@@@${norm}   ${dark}[@E${norm}  ${drkr}BBP${norm}   ${rred}@@@@@@@@@${norm}
${blck}${dark}NNL${norm}  ${dark}NNNNNNNNNNNNNNNNNNNN${rred}@@@@@@@@${orng}NNNNNNNNNN${rred}@@@@@@@@${dark}NNNNNNNNNNNNNNNNNNNNNN${norm}   ${dark}NN${norm}
${blck}${brgt}\`\`${norm}   ${brgt}\`\`\`\`\`\`\`\`\`\`\`\`\`\`\`\`\`\`\`\`\`\`${rred}@@@@@@@@${orng}FFFFFF${rred}@@@@@@@@${brgt}\`\`\`\`\`\`\`\`\`\`\`\`\`\`\`\`\`\`\`\`\`\`\`\`${norm}   ${brgt}\`\`${norm}
${blck}${drkr}PPL${norm}  ${drkr}PPPPPPPPPPPPPPPPPPPPPPPP${rred}@@@@@@@@${orng}@${rred}@@@@@@@@@${drkr}PPPPPPPPPPPPPPPPPPPPPPPPPP${norm}   ${drkr}PP${norm}
${blck}${drkr}PPL${norm}  ${drkr}PPPPPPPPPPPPPPPPPPPPPPPPP${rred},,@@@@@@@@@@@@,,${drkr}PPPPPPPPPPPPPPPPPPPPPPPPPPP${norm}   ${drkr}PP${norm}
${blck}                            ${rred}@@@@@@@@@@@@@@@@@@@@${norm}
${blck}                          ${rred}@@@@@@@@@@${norm}    ${rred}@@@@@@@@@@${norm}
${blck}                        ${rred}@@@@@@@@@@${norm}        ${rred}@@@@@@@@@@${norm}
${blck}                      ${rred}@@@@@@@@@E${norm}             ${rred}@@@@@@@@@${norm}

*******************************************************************************
            Welcome to AOSC OS Core @PKGVER@, Codename \"@CODENAME@\"!
*******************************************************************************
"
EOF
sed -e "s|@PKGVER@|${PKGVER}|g" \
    -e "s|@CODENAME@|${__CODENAME}|g" \
    -i "$SRCDIR"/autobuild/postinst
