abinfo "Installing DrRacket desktop entry and icons ..."
install -Dvm644 "$SRCDIR"/../share/pkgs/drracket/drracket/drracket.desktop "$PKGDIR"/usr/share/applications/drracket.desktop
install -dv "$PKGDIR"/usr/share/icons/hicolor/{16x16,32x32,48x48,256x256}/apps
ln -sv /usr/share/racket/pkgs/icons/plt-16x16.png "$PKGDIR"/usr/share/icons/hicolor/16x16/apps/drracket.png
ln -sv /usr/share/racket/pkgs/icons/plt-32x32.png "$PKGDIR"/usr/share/icons/hicolor/32x32/apps/drracket.png
ln -sv /usr/share/racket/pkgs/icons/plt-48x48.png "$PKGDIR"/usr/share/icons/hicolor/48x48/apps/drracket.png
ln -sv /usr/share/racket/pkgs/icons/plt-logo-red-diffuse.png "$PKGDIR"/usr/share/icons/hicolor/256x256/apps/drracket.png
