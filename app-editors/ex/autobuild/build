abinfo "Building ex ..."
make \
    PREFIX=/usr \
    LIBEXECDIR=/usr/lib/ex \
    PRESERVEDIR=/var/lib/ex \
    TERMLIB=ncurses \
    FEATURES="-DCHDIR -DFASTTAG -DUCVISUAL -DMB -DBIT8"

abinfo "Installing ex ..."
make install \
    PREFIX=/usr \
    LIBEXECDIR=/usr/lib/ex \
    PRESERVEDIR=/var/lib/ex \
    INSTALL=/usr/bin/install \
    DESTDIR="$PKGDIR"
