abinfo "Running CMakeLists.txt to generate Makefile ..."
cmake "$SRCDIR" $CMAKE_DEF $CMAKE_AFTER \

abinfo "Building binaries ..."
cmake --build . -- $ABMK $MAKE_AFTER \

abinfo "Installing binaries ..."
DESTDIR="$PKGDIR" cmake --install . \

pushd "${SRCDIR}"/python
sed -i "s@../build@${SRCDIR}@g" "$SRCDIR"/python/olm_build.py
make olm-python3
/usr/bin/python3 "$SRCDIR"/python/setup.py install $MAKE_AFTER --prefix=/usr --root="$PKGDIR" --optimize=1 --skip-build
popd
