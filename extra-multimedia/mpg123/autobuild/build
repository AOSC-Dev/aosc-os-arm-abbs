abinfo "Configuring mpg123 ..."
if [[ "${CROSS:-$ARCH}" != "i486" && \
      "${CROSS:-$ARCH}" != "powerpc" &&
      "${CROSS:-$ARCH}" != "armv4" && \
      "${CROSS:-$ARCH}" != "armv6hf" && \
      "${CROSS:-$ARCH}" != "armv7hf" && \
      "${CROSS:-$ARCH}" != "ppc64" && \
      "${CROSS:-$ARCH}" != "loongson2f" ]]; then
    "$SRCDIR"/configure \
        --prefix=/usr \
        --enable-int-quality \
        --with-module-suffix=.so \
        --with-audio="alsa oss pulse"
else
    "$SRCDIR"/configure \
        --prefix=/usr \
        --enable-int-quality \
        --with-module-suffix=.so \
        --with-audio="alsa"
fi

abinfo "Building mpg123 ..."
make

abinfo "Installing mpg123 ..."
make install \
    DESTDIR="$PKGDIR"

abinfo "Installing conplay ..."
install -vm755 "$SRCDIR"/scripts/conplay \
    "$PKGDIR"/usr/bin/conplay
