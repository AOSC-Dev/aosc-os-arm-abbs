abinfo "Configuring $PKGNAME ..."
"$SRCDIR"/configure \
    --prefix=/usr \
    --mandir=/usr/share/man \
    --X11-path=/usr \
    --use-js=no \
    --use-openjpeg=system

abinfo "Building $PKGNAME ..."
make

abinfo "Installing $PKGNAME ..."
make \
    install \
    install-lib \
    DESTDIR="$PKGDIR"
