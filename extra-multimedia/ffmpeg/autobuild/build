if [[ "${CROSS:-$ARCH}" = "loongson2f" ]]; then
    MIPSCONF="--cpu=loongson2f"
fi

if [[ "${CROSS:-$ARCH}" = "loongson3" ]]; then
    MIPSCONF="--disable-mipsdsp \
              --disable-mipsdspr2 \
              --disable-mipsfpu \
              --enable-msa \
              --disable-msa2 \
              --enable-mmi \
              --cpu=loongson3"
fi

if [[ "${CROSS:-$ARCH}" = "powerpc" ]]; then
    PPCCONF="--disable-altivec"
fi

if [[ "${CROSS:-$ARCH}" = "ppc64" ]]; then
    PPCCONF="--enable-altivec"
fi

if [[ "${CROSS:-$ARCH}" = "armv6hf" ]]; then
    ARMCONF="--disable-armv6t2 --disable-neon"
fi

if [[ "${CROSS:-$ARCH}" = "amd64" ]]; then
    MFX="--enable-libmfx"
fi

if [[ "${CROSS:-$ARCH}" = "amd64" ]]; then
    NVENC="--enable-nvenc"
fi

if ab_match_archgroup mainline; then
    abinfo "Configuring FFmpeg ..."
    "$SRCDIR"/configure \
        --prefix=/usr \
        --disable-debug \
        --disable-static \
        --disable-stripping \
        --enable-avisynth \
        --enable-fontconfig \
        --enable-gnutls \
        --enable-gpl \
        --enable-libass \
        --enable-libbluray \
        --enable-libfreetype \
        --enable-libfribidi \
        --enable-libgsm \
        --enable-libmodplug \
        --enable-libmp3lame \
        --enable-libopencore_amrnb \
        --enable-libopencore_amrwb \
        --enable-libopus \
        --enable-libpulse \
        --enable-libsoxr \
        --enable-libspeex \
        --enable-libssh \
        --enable-libtheora \
        --enable-libv4l2 \
        --enable-libvorbis \
        --enable-libvpx \
        --enable-libx264 \
        --enable-libx265 \
        --enable-libxvid \
        --enable-runtime-cpudetect \
        --enable-shared \
        --enable-swresample \
        --enable-vdpau \
        --enable-version3 \
        --enable-vaapi \
        --enable-lto \
        --enable-libaom \
        --enable-libsmbclient \
        $MIPSCONF $PPCCONF $MFX $NVENC
fi

if ab_match_archgroup retro; then
    abinfo "Configuring FFmpeg ..."
    "$SRCDIR"/configure \
        --prefix=/usr \
        --disable-debug \
        --disable-static \
        --disable-stripping \
        --enable-avisynth \
        --enable-avresample \
        --enable-fontconfig \
        --enable-gnutls \
        --enable-gpl \
        --enable-libass \
        --disable-libbluray \
        --enable-libfreetype \
        --enable-libfribidi \
        --disable-libgsm \
        --enable-libmodplug \
        --enable-libmp3lame \
        --disable-libopencore_amrnb \
        --disable-libopencore_amrwb \
        --disable-libopus \
        --disable-libpulse \
        --enable-libsoxr \
        --disable-libspeex \
        --disable-libssh \
        --enable-libtheora \
        --disable-libv4l2 \
        --enable-libvorbis \
        --disable-libvpx \
        --enable-libx264 \
        --disable-libx265 \
        --enable-libxvid \
        --enable-runtime-cpudetect \
        --enable-shared \
        --enable-swresample \
        --enable-vdpau \
        --enable-version3 \
        --enable-vaapi \
        --disable-avx \
        --disable-xop \
        --disable-fma3 \
        --disable-fma4 \
        --disable-avx2 \
        --disable-avx512 \
        --disable-aesni $PPCCONF $MIPSCONF $ARMCONF
fi

abinfo "Building FFmpeg ..."
make

abinfo "Installing FFmpeg ..."
make install \
    DESTDIR="$PKGDIR"
