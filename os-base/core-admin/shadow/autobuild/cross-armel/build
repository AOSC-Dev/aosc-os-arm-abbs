cat > config.cache << EOF
ac_cv_func_setpgrp_void=yes
EOF


./configure --host=$HOST \
    LIBS="-lcrypt" \
    --prefix=/usr \
    --bindir=/usr/bin \
    --sbindir=/usr/sbin \
    --libdir=/usr/lib \
    --mandir=/usr/share/man \
    --sysconfdir=/etc \
    --with-libpam \
    --with-group-name-max-length=32 \
    --without-selinux --cache-file=config.cache &&

make $ABMK &&
make install DESTDIR=`pwd`/abdist
