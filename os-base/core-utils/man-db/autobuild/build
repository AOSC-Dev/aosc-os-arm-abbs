./configure --prefix=/usr \
            --sysconfdir=/etc \
            --libexecdir=/usr/lib \
            --with-db=gdbm \
	    --disable-setuid \
	    --enable-mandirs=GNU \
	    --with-sections="1 n l 8 3 0 2 5 4 9 6 7"
make $ABMK
make DESTDIR=`pwd`/abdist install

rm -f abdist/usr/bin/zsoelim
mkdir -p abdist/var/cache/man; chmod 755 abdist/var/cache/man
