abinfo "Running autogen.sh..."
NOCONFIGURE=1 $SRCDIR/autogen.sh

abinfo "Unset PYTHON to disable Python 2"
unset PYTHON

abinfo "Running configure..."
"$SRCDIR"/configure     --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --libexecdir=/usr/lib \
    --disable-static \
    --disable-schemas-compile

abinfo "Building..."
make

abinfo "Installing files..."
DESTDIR="$PKGDIR" make install
