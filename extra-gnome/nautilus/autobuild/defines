PKGNAME=nautilus
PKGSEC=gnome
PKGDEP="libexif gnome-desktop exempi desktop-file-utils dconf tracker libzeitgeist \
        libnotify packagekit gnome-autoar gvfs"
BUILDDEP="gnome-common gtk-doc gobject-introspection intltool"
PKGDES="GNOME file manager"

AUTOTOOLS_AFTER="--libexecdir=/usr/lib/nautilus \
                 --disable-update-mimedb \
                 --enable-packagekit \
                 --disable-schemas-compile \
                 --disable-appindicator \
                 --disable-unity \
                 --disable-selinux \
                 --enable-gtk-doc"
