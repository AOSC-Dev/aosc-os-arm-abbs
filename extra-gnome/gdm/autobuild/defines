PKGNAME=gdm
PKGDES="GNOME Display Manager"
PKGSEC=gnome
PKGDEP="accountsservice dconf desktop-base libcanberra linux-pam nss upower gnome-session wayland fprintd plymouth"
BUILDDEP="gobject-introspection gtk-doc intltool itstool yelp-tools"

AUTOTOOLS_AFTER="--libexecdir=/usr/lib/gdm \
                 --disable-schemas-compile \
                 --enable-gdm-xsession \
                 --without-tcp-wrappers \
                 --with-plymouth \
                 --enable-ipv6 \
                 --with-default-pam-config=arch \
                 --with-at-spi-registryd-directory=/usr/lib/at-spi2-core \
                 --with-check-accelerated-directory=/usr/lib/gnome-session \
                 --with-gnome-settings-daemon-directory=/usr/lib/gnome-settings-daemon \
                 --enable-gtk-doc"
