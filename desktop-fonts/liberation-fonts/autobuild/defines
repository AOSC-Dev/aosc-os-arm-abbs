PKGNAME=liberation-fonts
PKGSEC=fonts
PKGDEP="fontconfig"
BUILDDEP="fontforge fonttools"
PKGDES="Fonts to replace commonly used Microsoft Windows fonts"

PKGREP="liberation-fonts-ttf"
PKGBREAK="liberation-fonts-ttf"
PKGPROV="ttf-liberation"

ABHOST=noarch

# Note: Extra Provides for Spiral (Debian compatibility).
PKGPROV="fonts-liberation_spiral"
