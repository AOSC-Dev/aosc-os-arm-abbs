abinfo "Installing font to $PKGDIR..."
mkdir -p "$PKGDIR"/usr/share/fonts/TTF
install -Dm644 "$SRCDIR"/*.ttf "$PKGDIR"/usr/share/fonts/TTF

abinfo "Intalling license..."
mkdir -p "$PKGDIR"/usr/share/doc/open-huninn-font/
install -Dm644 "$SRCDIR"/license.txt "$PKGDIR"/usr/share/doc/open-huninn-font/lincese.txt
