abinfo "Installing fonts..."
install -dvm755 "$PKGDIR"/usr/share/fonts/TTF
install -vm644 "$SRCDIR"/*.ttc "$PKGDIR"/usr/share/fonts/TTF/

abinfo "Installing LICENSE..."
install -dvm755 "$PKGDIR"/usr/share/doc/sarasa-gothic-fonts/
install -vm644 "$SRCDIR"/Sarasa-Gothic-$PKGVER/LICENSE "$PKGDIR"/usr/share/doc/sarasa-gothic-fonts/
