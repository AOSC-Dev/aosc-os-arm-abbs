abinfo "Installing JetBrains Mono font file..."
install -dvm755 "$PKGDIR"/usr/share/fonts/TTF
install -vm644 "$SRCDIR"/fonts/ttf/*.ttf "$PKGDIR"/usr/share/fonts/TTF/

abinfo "Installing LICENSE..."
install -dvm755 "$PKGDIR"/usr/share/doc/jetbrains-mono/
install -vm644 "$SRCDIR"/OFL.txt "$PKGDIR"/usr/share/doc/jetbrains-mono/
