PKGNAME=ccls
PKGSEC=devel
PKGDEP="llvm"
PKGDES="C/C++ language server supporting cross references, hierarchies, completion and semantic highlighting"

CMAKE_AFTER="-DCMAKE_INSTALL_PREFIX=/usr \
             -DSYSTEM_CLANG=ON           \
             -DUSE_SHARED_LLVM=ON        \
             -DLLVM_ENABLE_RTTI=ON"

ABTYPE=cmake
