abinfo "Creating symlinks for unversioned .so ..."
mkdir -pv "$PKGDIR"/usr/lib
for i in libLTO.so LLVMgold.so libLLVM.so \
         libc++.so libc++.so.1 libc++.so.1.0 \
         libc++abi.so libc++abi.so.1 libc++abi.so.1.0; do
    ln -sv llvm-17/lib/$i \
        "$PKGDIR"/usr/lib/$i
done

abinfo "Installing LLVM BFD plugins ..."
mkdir -pv "$PKGDIR"/usr/lib/bfd-plugins
ln -sv ../LLVMgold.so \
    "$PKGDIR"/usr/lib/bfd-plugins/LLVMgold.so
ln -sv ../libLTO.so \
    "$PKGDIR"/usr/lib/bfd-plugins/libLTO.so
