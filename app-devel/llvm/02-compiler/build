abinfo "Creating symlinks for llvm binaries ..."
mkdir -pv "$PKGDIR"/usr/bin
for i in $(dpkg -L llvm-17); do
    if  [[ $i == /usr/bin/*-17 ]]; then
        ln -sv $i \
            "$PKGDIR"${i%-17}
    fi
done

abinfo "Creating symlinks for clang ..."
mkdir -pv "$PKGDIR"/usr/lib/clang
ln -sv ../llvm-17/lib/clang/17 "$PKGDIR"/usr/lib/clang/17
ln -sv ../llvm-17/lib/clang/17.0.6 "$PKGDIR"/usr/lib/clang/17.0.6

abinfo "Creating symlinks for llvm headers ..."
mkdir -pv "$PKGDIR"/usr/include
ln -sv ../llvm-17/include/llvm "$PKGDIR"/usr/include/llvm
