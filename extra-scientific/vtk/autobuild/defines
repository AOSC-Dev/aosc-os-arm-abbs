PKGNAME=vtk
PKGSEC=graphic
PKGDES="Software system for 3D computer graphics, image processing and visualization"
PKGDEP="double-conversion gcc-runtime gdal gl2ps gnuplot graphviz hdf5 \
        jsoncpp libharu matplotlib mpi4py mesa netcdf openmpi proj \
        pugixml qt-5 sqlite tk tcl unixodbc"
BUILDDEP="boost doxygen openjdk eigen-3 expat fmt freetype libjpeg-turbo \
          libogg libpng libtheora libtiff libxml2 lz4 utfcpp x11-lib wget zlib"

CMAKE_AFTER="-DCMAKE_INSTALL_LICENSEDIR=share/doc/$PKGNAME \
             -DVTK_BUILD_ALL_MODULES=ON \
             -DBUILD_SHARED_LIBS=ON \
             -DVTK_LEGACY_REMOVE=ON \
             -DVTK_PYTHON_VERSION=3 \
             -DVTK_USE_MPI=ON \
             -DVTK_USE_TK=ON \
             -DVTK_VERSIONED_INSTALL=OFF \
             -DVTK_WRAP_JAVA=ON \
             -DVTK_WRAP_PYTHON=ON \
             -DVTK_SMP_ENABLE_OPENMP=ON \
             -DVTKm_ENABLE_MPI=ON \
             -DVTKm_ENABLE_OPENMP=ON \
             -DVTKm_ENABLE_HDF5_IO=ON \
             -DVTK_OPENGL_HAS_OSMESA=ON \
             -DVTK_USE_EXTERNAL=ON \
             -DVTK_MODULE_USE_EXTERNAL_VTK_cli11=OFF \
             -DVTK_MODULE_USE_EXTERNAL_VTK_exprtk=OFF \
             -DVTK_MODULE_USE_EXTERNAL_VTK_ioss=OFF \
             -DVTK_MODULE_USE_EXTERNAL_VTK_pegtl=OFF \
             -DVTK_MODULE_ENABLE_VTK_DomainsMicroscopy=NO \
             -DVTK_MODULE_ENABLE_VTK_FiltersOpenTURNS=NO \
             -DVTK_MODULE_ENABLE_VTK_GeovisGDAL=ON \
             -DVTK_MODULE_ENABLE_VTK_ImagingOpenGL2=ON \
             -DVTK_MODULE_ENABLE_VTK_InfovisBoost=ON \
             -DVTK_MODULE_ENABLE_VTK_InfovisBoostGraphAlgorithms=ON \
             -DVTK_MODULE_ENABLE_VTK_IOMySQL=ON"
