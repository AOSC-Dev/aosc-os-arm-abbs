PKGNAME=vtk
PKGSEC=graphic
PKGDES="Software system for 3D computer graphics, image processing and visualization"
PKGDEP="double-conversion ffmpeg gcc-runtime gdal gl2ps glew gnuplot graphviz \
        hdf5 jsoncpp libarchive libharu liblas lz4 matplotlib mpi4py netcdf \
        openjdk openmpi postgresql proj pugixml qt-5 sqlite \
        tbb tk tcl unixodbc"
BUILDDEP="boost doxygen eigen-3 expat fmt freetype libjpeg-turbo \
          libogg libpng libtheora libtiff libxml2 utfcpp x11-lib zlib"

CMAKE_AFTER="-DCMAKE_INSTALL_LICENSEDIR=share/doc/$PKGNAME \
             -DVTK_BUILD_DOCUMENTATION=ON \
             -DVTK_BUILD_ALL_MODULES=ON \
             -DBUILD_SHARED_LIBS=ON \
             -DVTK_LEGACY_REMOVE=ON \
             -DVTK_VERSIONED_INSTALL=OFF \
             -DVTK_USE_MPI=ON \
             -DVTK_USE_TK=ON \
             -DVTK_WRAP_JAVA=ON \
             -DVTK_WRAP_PYTHON=ON \
             -DVTK_PYTHON_VERSION=3 \
             -DVTK_SMP_ENABLE_OPENMP=ON \
             -DVTK_SMP_IMPLEMENTATION_TYPE=TBB \
             -DVTKm_ENABLE_MPI=ON \
             -DVTKm_ENABLE_OPENMP=ON \
             -DVTKm_ENABLE_HDF5_IO=ON \
             -DVTK_USE_EXTERNAL=ON \
             -DVTK_GROUP_ENABLE_Imaging=YES \
             -DVTK_GROUP_ENABLE_Qt=YES \
             -DVTK_GROUP_ENABLE_Rendering=YES \
             -DVTK_GROUP_ENABLE_StandAlone=YES \
             -DVTK_GROUP_ENABLE_Views=YES \
             -DVTK_GROUP_ENABLE_Web=YES \
             -DVTK_MODULE_USE_EXTERNAL_VTK_cli11=OFF \
             -DVTK_MODULE_USE_EXTERNAL_VTK_exprtk=OFF \
             -DVTK_MODULE_USE_EXTERNAL_VTK_ioss=OFF \
             -DVTK_MODULE_USE_EXTERNAL_VTK_pegtl=OFF \
             -DVTK_MODULE_ENABLE_VTK_DomainsMicroscopy=YES \
             -DVTK_MODULE_ENABLE_VTK_FiltersOpenTURNS=YES \
             -DVTK_MODULE_ENABLE_VTK_GeovisGDAL=YES \
             -DVTK_MODULE_ENABLE_VTK_ImagingOpenGL2=YES \
             -DVTK_MODULE_ENABLE_VTK_InfovisBoost=YES \
             -DVTK_MODULE_ENABLE_VTK_InfovisBoostGraphAlgorithms=YES \
             -DVTK_MODULE_ENABLE_VTK_IOMySQL=YES"
