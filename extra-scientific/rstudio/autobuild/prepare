abinfo "Creating a symlink for Node.js ..."
mkdir -pv "$SRCDIR"/dependencies/common/node/10.19.0/bin/
ln -sv /usr/bin/node \
    "$SRCDIR"/dependencies/common/node/10.19.0/bin/

abinfo "Preparing more bundled dependencies ..."
(
    cd "$SRCDIR"/dependencies
    install -d \
        "$SRCDIR"/dependencies/dictionaries \
        "$SRCDIR"/dependencies/pandoc \
        "$SRCDIR"/dependencies/libclang/{3.5,builtin-headers}

    ln -svfT /usr/share/mathjax \
        "$SRCDIR"/dependencies/mathjax-27
    ln -svfT /usr/lib/libclang.so \
        "$SRCDIR"/dependencies/libclang/3.5/libclang.so
    ln -svfT /usr/lib/clang/*/include \
        "$SRCDIR"/dependencies/libclang/builtin-headers/3.5
    ln -svfT /usr/bin/ \
        "$SRCDIR"/dependencies/pandoc/2.11.4

    cd "$SRCDIR"/dependencies/common
    bash install-packages
)
