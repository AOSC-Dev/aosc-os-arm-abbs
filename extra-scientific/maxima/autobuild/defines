PKGNAME=maxima
PKGSEC=math
PKGDEP="gnuplot texinfo ecl tk rlwrap"
BUILDDEP="emacs"
PKGDES="A sophisticated computer algebra system"

AUTOTOOLS_AFTER="""
    --prefix=/usr
    --mandir=/usr/share/man
    --infodir=/usr/share/info
    --enable-ecl 
    --with-default-lisp=ecl 
    --libexecdir=/usr/lib
    """

ABSHADOW=no
MAKE_AFTER="emacsdir=/usr/share/emacs/site-lisp/maxima"
NOPARALLEL=1
NOLTO=1

ABSPLITDBG=0
