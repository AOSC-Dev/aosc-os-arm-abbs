case "$ARCH" in
	armel) platform="linux_armv7a_hardfloat-gles" dynarec="WITH_DYNAREC=arm" simd="USE_SSE2NEON=1" ;;
	arm64) platform="unix-gles" ;;
	amd64) platform="unix-gles" dynarec="WITH_DYNAREC=x86_64" ;;
	mipsel) platform="unix-gles" ;;
esac

make -f Makefile platform="$platform" $dynarec $simd

# For RetroArch
mkdir -p "$PKGDIR"/usr/lib/libretro
cp parallel_n64_libretro.so "$PKGDIR"/usr/lib/libretro/
mkdir -p "$PKGDIR"/usr/share/libretro/info
cp autobuild/*.info "$PKGDIR"/usr/share/libretro/info/
