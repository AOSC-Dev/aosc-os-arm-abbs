axel -a http://download.qt-project.org/official_releases/qt/5.5/5.5.0/single/qt-everywhere-opensource-src-5.5.0.tar.xz

cd tdesktop
patch -Np1 -i ../autobuild/patches/disable-custom-scheme-linux.patch
patch -Np1 -i ../autobuild/patches/disable-updater.patch
cd ..

mkdir Libraries; cd Libraries
tar xf ../qt-everywhere-opensource-src-5.5.0.tar.xz
mv qt-everywhere-opensource-src-5.5.0 QtStatic
cd QtStatic
cp $SRCDIR/tdesktop/Telegram/_qt_5_5_0_patch.diff .
patch -p1 -i _qt_5_5_0_patch.diff
cd $SRCDIR

sed -i 's/CUSTOM_API_ID//g' tdesktop/Telegram/Telegram.pro
	
echo "DEFINES += TDESKTOP_DISABLE_AUTOUPDATE" >> tdesktop/Telegram/Telegram.pro
echo 'INCLUDEPATH += "/usr/lib/glib-2.0/include"' >> tdesktop/Telegram/Telegram.pro
echo 'INCLUDEPATH += "/usr/lib/gtk-2.0/include"' >> tdesktop/Telegram/Telegram.pro
echo 'INCLUDEPATH += "/usr/include/opus"' >> tdesktop/Telegram/Telegram.pro

# FIXME: what the * is this?!
cp autobuild/libxkbcommon.a /usr/local/lib/
