abinfo "Installing contrib files"
install -Dvm755 contrib/ssh-copy-id "$PKGDIR"/usr/bin/ssh-copy-id
install -Dvm755 contrib/findssl.sh "$PKGDIR"/usr/bin/findssl.sh
install -Dvm644 contrib/ssh-copy-id.1 "$PKGDIR"/usr/share/man/man1/ssh-copy-id.1

abinfo "Patching ssh_config"
sed -i 's/# Host \*/Host \*/' "$PKGDIR"/etc/ssh/ssh_config
cat << EOF >> "$PKGDIR"/etc/ssh/ssh_config
  Include ssh_config.d/*
EOF

abinfo "Patching sshd_config"
sed \
	-e '/^#ChallengeResponseAuthentication yes$/c ChallengeResponseAuthentication no' \
	-e '/^#PrintMotd yes$/c PrintMotd no # pam does that' \
	-e '/^#UsePAM no$/c UsePAM yes' \
	-i "$PKGDIR"/etc/ssh/sshd_config
