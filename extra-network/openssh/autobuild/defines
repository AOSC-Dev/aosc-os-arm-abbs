PKGNAME=openssh
PKGSEC=net
PKGDES="ssh clients and the sshd daemon"
PKGDEP="openssl linux-pam ldns krb5 libedit"
PKGRECOM="x11-app"
AUTOTOOLS_AFTER="--sysconfdir=/etc/ssh --with-ldns --with-libedit --with-ssl-engine --with-pam --with-privsep-user=nobody --with-kerberos5=/usr --with-xauth=/usr/bin/xauth --with-mantype=man --with-md5-passwords --with-pid-dir=/run"

