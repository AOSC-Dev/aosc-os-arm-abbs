abinfo "Installing binary for $ARCH ..."
if [[ "${CROSS:-$ARCH}" = "amd64" ]]; then
    gzip -vd clash-linux-amd64-"$VER".gz
    install -Dvm755 clash-linux-amd64-"$VER" "$PKGDIR"/usr/bin/clash
fi

if [[ "${CROSS:-$ARCH}" = "arm64" ]]; then
    gzip -vd clash-linux-armv8-"$VER".gz
    install -Dvm755 clash-linux-armv8-"$VER" "$PKGDIR"/usr/bin/clash
fi

if [[ "${CROSS:-$ARCH}" = "loongson3" ]]; then
    gzip -vd clash-linux-mips64le-"$VER".gz
    install -Dvm755 clash-linux-mips64le-"$VER" "$PKGDIR"/usr/bin/clash
fi