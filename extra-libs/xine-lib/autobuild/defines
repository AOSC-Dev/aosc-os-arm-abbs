PKGNAME=xine-lib
PKGDES="A multimedia playback engine"
PKGSEC=libs
PKGDEP="ffmpeg a52dec aalib faad2 gdk-pixbuf glu gnome-vfs imagemagick jack \
        libbluray libcaca dcadec libdvdnav libmad libmng libmodplug libmpcdec \
        libvdpau samba vcdimager wavpack libnsl2"
PKGDEP__RETRO=" \
        ffmpeg a52dec aalib faad2 gdk-pixbuf glu imagemagick \
        libbluray libcaca dcadec libdvdnav libmad libmng libmodplug libmpcdec \
        libvdpau samba vcdimager wavpack libnsl2"
PKGDEP__ARMEL="${PKGDEP__RETRO}"
PKGDEP__ARMHF="${PKGDEP__RETRO}"
PKGDEP__I486="${PKGDEP__RETRO}"
PKGDEP__LOONGSON2F="${PKGDEP__RETRO}"
PKGDEP__POWERPC="${PKGDEP__RETRO}"
PKGDEP__PPC64="${PKGDEP__RETRO}"

AUTOTOOLS_AFTER="--with-wavpack \
                 --enable-vdpau \
                 --with-external-dvdnav \
                 --disable-optimizations"

ABSHADOW=0
