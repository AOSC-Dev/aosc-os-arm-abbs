PKGNAME=gmic
PKGSEC=libs
PKGDEP="glibc"
BUILDDEP="gimp qt-5 fftw openexr opencv eigen-3 graphicsmagick"
PKGDES="A digital image processing framework"

CMAKE_AFTER="
	-DENABLE_DYNAMIC_LINKING=ON
	-DBUILD_LIB_STATIC=OFF
	-DENABLE_OPENCV=ON
"
__CMAKE_AFTER_QT="
	-DENABLE_DYNAMIC_LINKING=ON
	-DGMIC_PATH=$SRCDIR/src
	-DGMIC_QT_HOST=none
"
__CMAKE_AFTER_GIMP="
	-DENABLE_DYNAMIC_LINKING=ON
	-DGMIC_PATH=$SRCDIR/src
	-DGMIC_QT_HOST=gimp
"
