PKGNAME=libgcrypt
PKGDES="General purpose cryptographic library based on the code from GnuPG"
PKGDEP="libgpg-error"
PKGSEC=libs
AUTOTOOLS_AFTER="--disable-padlock-support --without-capabilities"

if [[ "${CROSS:-$ARCH}" = armel ]]; then
    AUTOTOOLS_AFTER+=" --build=armv7a-hardfloat-linux-gnueabi \
                       --host=armv7a-hardfloat-linux-gnueabi"
fi
