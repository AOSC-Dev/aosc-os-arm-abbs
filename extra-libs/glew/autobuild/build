abinfo "Building GLEW ..."
make \
    STRIP= \
    LIBDIR=/usr/lib \
    CFLAGS.EXTRA="${CPPFLAGS} ${CFLAGS}" \
    LDFLAGS.EXTRA="${LDFLAGS}"

abinfo "Installing GLEW ..."
make install.all \
    STRIP= \
    DESTDIR="$PKGDIR" \
    LIBDIR=/usr/lib \
    CFLAGS.EXTRA="${CPPFLAGS} ${CFLAGS}" \
    LDFLAGS.EXTRA="${LDFLAGS}"

abinfo "Setting executable bits for /usr/lib/*.so.* ..."
chmod -v +x "$PKGDIR"/usr/lib/*.so.*
