export CFLAGS="${CFLAGS} -fno-delete-null-pointer-checks"
export CXXFLAGS="${CXXFLAGS} -fno-delete-null-pointer-checks"

cd qtbase

sed -i -e "s|^\(QMAKE_CFLAGS_RELEASE.*\)|\1 ${CFLAGS}|" \
    mkspecs/common/gcc-base.conf
sed -i -e "s|^\(QMAKE_CXXFLAGS_RELEASE.*\)|\1 ${CXXFLAGS}|" \
    mkspecs/common/g++-base.conf
sed -i -e "s|^\(QMAKE_LFLAGS_RELEASE.*\)|\1 ${LDFLAGS}|" \
    mkspecs/common/g++-unix.conf

sed -e 's|libsystemd-journal|libsystemd|' \
    -i config.tests/unix/journald/journald.pro \
    -i src/corelib/global/global.pri

patch -Np1 -i "$SRCDIR"/autobuild/patches/qt5-gamma-1.8.patch

cd "$SRCDIR"/qtwebengine
patch -Np1 -i "$SRCDIR"/autobuild/patches/qt5-webengine-fno-delete-null-pointer-checks.patch
patch -Np1 -i "$SRCDIR"/autobuild/patches/qtwebengine-opensource-src-5.7.0-glibc224.patch
cd src/3rdparty
patch -Np1 -i "$SRCDIR"/autobuild/patches/qt5-webengine-fno-delete-null-pointer-checks-2.patch

cd "$SRCDIR"
