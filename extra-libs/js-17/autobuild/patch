sed -i 's#s \($(SHLIB_\(ABI\|EXACT\)_VER)\)#s $(notdir \1)#' Makefile.in
sed -i 's/defined(@TEMPLATE_FILE)/@TEMPLATE_FILE/g' config/milestone.pl

for i in autobuild/patches/*.patch; do
    patch -Np3 -i $i
done

cd "$SRCDIR"/../../
patch -Np1 -i "$SRCDIR"/autobuild/patches/aarch64.diff
cd "$SRCDIR"
