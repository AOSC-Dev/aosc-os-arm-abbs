PKGNAME=openimageio
PKGSEC=libs
PKGDEP="boost glew jasper libraw libtiff opencolorio opencv openexr openssl tbb"
BUILDDEP="cmake"
PKGDES="A library for reading and writing images, including classes, utilities, and applications"

CMAKE_AFTER="-DPYLIB_INSTALL_DIR=lib/python2.7/site-packages -DUSE_EXTERNAL_TBB=ON \
             -DOIIO_BUILD_TOOLS=ON -DUSE_PYTHON=ON -DUSE_PYTHON3=ON \
             -DUSE_FFMPEG=OFF"
