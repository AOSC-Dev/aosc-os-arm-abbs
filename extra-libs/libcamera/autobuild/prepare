# Fedora: 64-bit POWER LE does not use the IEEE long double
# ABI but instead a custom one by default. This leads to
# libcamera failing to build, use IEEE long double ABI to
# prevent it.
#
# https://bugzilla.redhat.com/show_bug.cgi?id=1538817
if [[ "${CROSS:-$ARCH}" == "ppc64el" ]]; then
    abinfo 'Appending IEEE long donble ABI build flags ...'
    export CFLAGS="${CFLAGS} -mabi=ieeelongdouble"
    export CXXFLAGS="${CXXFLAGS} -mabi=ieeelongdouble"
fi
