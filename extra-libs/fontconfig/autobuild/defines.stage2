PKGNAME=fontconfig
PKGSEC=x11
PKGDEP="freetype expat"
BUILDDEP="gperf"
PKGDES="A library for configuring and customizing font access"

AB_FLAGS_O3=1

ABTYPE=meson
MESON_AFTER="-Ddoc=disabled \
             -Ddoc-txt=disabled \
             -Ddoc-man=disabled \
             -Ddoc-pdf=disabled \
             -Ddoc-html=disabled \
             -Dnls=enabled \
             -Dtools=enabled \
             -Dcache-build=disabled"

PKGEPOCH=1
