abinfo "Stripping unneeded 3rd party libraries ..."
rm -rv "$SRCDIR"/3rdparty/libatomicops
rm -rv "$SRCDIR"/3rdparty/libtommath

abinfo "Running perl configure ..."
perl "$SRCDIR"/Configure.pl \
    --has-libuv --has-libffi \
    --has-libtommath --has-libatomic_ops \
    --prefix=/usr --libdir=/usr/lib \
    --debug
