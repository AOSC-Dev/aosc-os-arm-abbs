mkdir -pv "$PKGDIR"/usr/lib/systemd/system-preset

abinfo "Writing 75-aosc-os-azure.preset ..."
cat > "$PKGDIR"/usr/lib/systemd/system-preset/75-aosc-os-azure.preset << EOF
## 75-aosc-os-azure.preset
## Systemd presets for AOSC OS hosted on Azure

# Cloud Services
enable cloud-init-network.service
enable waagent.service

# Remote access
enable sshd.service

# Azure will have its own firewall
disable firewalld.service
EOF
