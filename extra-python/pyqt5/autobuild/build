abinfo "Configuring PyQt 5 ..."
sip-build \
    --confirm-license \
    --no-make \
    --api-dir /usr/share/qt/qsci/api/python

(
    cd "$SRCDIR"/build

    abinfo "Building PyQt 5 ..."
    make

    abinfo "Installing PyQt 5 ..."
    make install -j1 \
        DESTDIR="$PKGDIR" \
        INSTALL_ROOT="$PKGDIR"
)
