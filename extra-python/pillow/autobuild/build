for i in 2 3; do
    cd Pillow-$i-$PKGVER
    python$i setup.py install --root="$PKGDIR" --optimize=0
    cd "$PKGDIR"/usr/bin
    for f in *.py; do
        mv "$f" "${f%.py}"$i
    done
    cd "$SRCDIR"
done

cd "$PKGDIR"/usr/bin
for i in *2; do
    ln -sv $i ${i%2}
done
cd "$SRCDIR"

install -dm755 "$PKGDIR"/usr/include/python3.5m/
install -m644 -t "$PKGDIR"/usr/include/python3.5m/ libImaging/*.h

install -dm755 "$PKGDIR"/usr/include/python2.7/
install -m644 -t "$PKGDIR"/usr/include/python2.7/ libImaging/*.h
