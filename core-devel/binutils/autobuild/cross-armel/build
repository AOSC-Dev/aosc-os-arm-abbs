rm -fv etc/standards.info
sed -i.bak '/^INFO/s/standards.info //' etc/Makefile.in

mkdir binutils-build
pushd binutils-build

../configure --host=armv7a-hardfloat-linux-gnueabi --target=armv7a-hardfloat-linux-gnueabi --prefix=/usr \
             --with-lib-path=/usr/lib \
             --with-bugurl=https://github.com/AOSC-Dev/AOSC-OS \
             --enable-threads --enable-shared --with-pic \
             --enable-ld=default --enable-plugins \
             --disable-werror --enable-lto &&

make configure-host &&
make tooldir=/usr &&

make prefix=`pwd`/../abdist/usr tooldir=`pwd`/../abdist/usr install &&

popd

rm abdist/usr/share/man/man1/{dlltool,nlmconv,windres,windmc}*
