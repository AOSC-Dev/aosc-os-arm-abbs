# . autobuild/patch
mkdir -p build
cd build
../configure --host=armv7a-hardfloat-linux-gnueabi --target=armv7a-hardfloat-linux-gnueabi \
      --prefix=/usr \
      --libdir=/usr/lib --libexecdir=/usr/lib \
      --mandir=/usr/share/man --infodir=/usr/share/info \
      --with-bugurl=https://bugs.anthonos.org/ \
      --enable-languages=c,c++,lto \
      --enable-shared --enable-threads=posix \
      --with-system-zlib --enable-__cxa_atexit \
      --disable-libunwind-exceptions --enable-clocale=gnu \
      --disable-libstdcxx-pch --disable-libssp \
      --enable-gnu-unique-object --enable-linker-build-id \
      --enable-lto --enable-plugin --enable-install-libiberty \
      --with-linker-hash-style=gnu \
      --disable-multilib --disable-werror \
      --enable-checking=release \
      --with-default-libstdcxx-abi=c++98 --with-sysroot=/var/ab/cross-root/armel &&

make  &&
sed -i 's"@inst_prefix_dir@"-inst-prefix-dir /var/ab/cross-root/armel"g' armv7a-hardfloat-linux-gnueabi/libsanitizer/asan/libasan.la &&
sed -i 's"@inst_prefix_dir@"-inst-prefix-dir /var/ab/cross-root/armel"g' armv7a-hardfloat-linux-gnueabi/libsanitizer/ubsan/libubsan.la &&
make install DESTDIR=`pwd`/../abdist


