PKGNAME=citra
PKGDES="An experimental Nintendo 3DS emulator"
PKGSEC=games
PKGDEP="sdl2 qt-6 ffmpeg boost libusb"
BUILDDEP="glslang"

ABTYPE="cmakeninja"
CMAKE_AFTER="-DCMAKE_BUILD_TYPE=Release \
             -DENABLE_QT_TRANSLATION=ON \
             -DCITRA_ENABLE_COMPATIBILITY_REPORTING=ON \
             -DENABLE_COMPATIBILITY_LIST_DOWNLOAD=ON \
             -DUSE_DISCORD_PRESENCE=ON \
             -DUSE_SYSTEM_BOOST=OFF \
             -DENABLE_FFMPEG_AUDIO_DECODER=ON \
             -DENABLE_FFMPEG_VIDEO_DUMPER=ON \
             -DCMAKE_INSTALL_PREFIX=/usr"

NOLTO__LOONGSON3=1
NOLTO__PPC64EL=1

# FIXME: Fails to build with !(amd64|arm64) due to missing build target
# definitions. Upstream fix pending.
FAIL_ARCH="!(amd64|arm64)"
