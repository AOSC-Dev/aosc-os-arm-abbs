PKGNAME=vba-m
PKGSEC=games
PKGDEP="ffmpeg sdl2 sfml wxgtk3 zip"
BUILDDEP="cmake"
PKGDES="A Nintendo GameBoy Advance emulator"

ABTYPE=cmakeninja
CMAKE_AFTER="-DENABLE_WX=TRUE \
             -DENABLE_DEBUGGER=TRUE \
             -DENABLE_SDL=FALSE \
             -DENABLE_FFMPEG=TRUE \
             -DENABLE_LINK=TRUE \
             -DCMAKE_INSTALL_SYSCONFDIR=/etc"
PKGEPOCH=1

PKGPROV="visualboyadvance-m"
