PKGNAME=kmplayer-trinity
PKGSEC=Trinity
PKGDEP="gst-plugins-base-1-0 mplayer tdelibs xine-ui"
PKGDEP__RETRO="mplayer tdelibs xine-ui"
PKGDEP__ARMEL="${PKGDEP__RETRO}"
PKGDEP__ARMHF="${PKGDEP__RETRO}"
PKGDEP__I486="${PKGDEP__RETRO}"
