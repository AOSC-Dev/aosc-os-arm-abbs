             -DWITH_XFIXES=ON \
             -DWITH_XRANDR=ON \
             -DWITH_XRENDER=ON \
             -DWITH_XDAMAGE=ON \
             -DWITH_XEXT=ON \
             -DWITH_XTEST=ON \
             -DWITH_OPENGL=ON \
             -DWITH_XSCREENSAVER=ON \
             -DWITH_LIBART=ON \
             -DWITH_LIBRAW1394=ON \
             -DWITH_PAM=ON \
             -DWITH_XDMCP=ON \
             -DWITH_XINERAMA=ON \
             -DWITH_ARTS=ON \
             -DWITH_I8K=ON \
             -DWITH_SENSORS=ON \
             -DWITH_HAL=OFF \
