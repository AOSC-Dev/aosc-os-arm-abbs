PKGNAME=arts
PKGSEC=Trinity
PKGDEP="audiofile glib gsl jack libmad libtool libvorbis pulseaudio \
        tqtinterface"
PKGDEP__RETRO=" \
        audiofile glib gsl libmad libtool libvorbis tqtinterface"
PKGDEP__ARMV4="${PKGDEP__RETRO}"
PKGDEP__ARMV6HF="${PKGDEP__RETRO}"
PKGDEP__ARMV7HF="${PKGDEP__RETRO}"
PKGDEP__I486="${PKGDEP__RETRO}"
PKGDEP__LOONGSON2F="${PKGDEP__RETRO}"
PKGDEP__POWERPC="${PKGDEP__RETRO}"
PKGDEP__PPC64="${PKGDEP__RETRO}"
PKGDES="Aanalog Realtime Synthesizer, sound system for Trinity Desktop Environment"

ABTYPE=cmake
CMAKE_AFTER="-DCMAKE_NO_BUILTIN_CHRPATH=ON \
             -DWITH_GCC_VISIBILITY=OFF \
             -DCMAKE_INSTALL_PREFIX=/usr \
             -DBIN_INSTALL_DIR=/usr/bin \
             -DINCLUDE_INSTALL_DIR=/usr/include/arts \
             -DLIB_INSTALL_DIR=/usr/lib \
             -DCMAKE_SKIP_RPATH=OFF \
             -DWITH_ALSA=ON \
             -DWITH_AUDIOFILE=ON \
             -DWITH_VORBIS=ON \
             -DWITH_MAD=ON \
             -DWITH_ESOUND=OFF \
             -DWITH_JACK=ON \
             -DWITH_ALL_OPTIONS=ON"
CMAKE_AFTER__RETRO=" \
             ${CMAKE_AFTER} \
             -DWITH_JACK=OFF"
CMAKE_AFTER__ARMV4="${CMAKE_AFTER__RETRO}"
CMAKE_AFTER__ARMV6HF="${CMAKE_AFTER__RETRO}"
CMAKE_AFTER__ARMV7HF="${CMAKE_AFTER__RETRO}"
CMAKE_AFTER__I486="${CMAKE_AFTER__RETRO}"
CMAKE_AFTER__LOONGSON2F="${CMAKE_AFTER__RETRO}"
CMAKE_AFTER__POWERPC="${CMAKE_AFTER__RETRO}"
CMAKE_AFTER__PPC64="${CMAKE_AFTER__RETRO}"

NOSTATIC=0
NOLTO=1

ABUSECMAKEBUILD=0

NOLIBTOOL=0
