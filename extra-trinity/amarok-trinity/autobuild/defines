PKGNAME=amarok-trinity
PKGSEC=Trinity
PKGDEP="akode libgpod libifp libmtp libnjb libvisual mp4v2 sdl sqlite taglib \
        tdebase xine-lib"
PKGDES="An audio player and library manager for Trinity Desktop Environment"

CMAKE_AFTER="-DLIB_INSTALL_DIR=/usr/lib \
             -DWITH_ALL_OPTIONS=ON \
             -DWITH_GCC_VISIBILITY=OFF \
             -DBUILD_ALL=ON \
             -DWITH_MYSQL=OFF \
             -DWITH_POSTGRESQL=OFF"
# Requires Ruby, let's not (~100MiB).
CMAKE_AFTER__RETRO=" \
             ${CMAKE_AFTER} \
             -DWITH_DAAP=OFF"
CMAKE_AFTER__ARMEL="${CMAKE_AFTER__RETRO}"
CMAKE_AFTER__ARMHF="${CMAKE_AFTER__RETRO}"
CMAKE_AFTER__I486="${CMAKE_AFTER__RETRO}"
CMAKE_AFTER__LOONGSON2F="${CMAKE_AFTER__RETRO}"
CMAKE_AFTER__POWERPC="${CMAKE_AFTER__RETRO}"
CMAKE_AFTER__PPC64="${CMAKE_AFTER__RETRO}"

PKGCONFL="amarok"

NOLIBTOOL=0
