                 --enable-gstreamer-interfaces \
                 --enable-farstream \
                 --enable-vv \
                 --enable-idn \
                 --disable-meanwhile \
                 --enable-avahi \
                 --enable-plugins \
                 --enable-fortify \
                 --enable-dbus \
                 --enable-nm \
                 --disable-unity \
                 --disable-mono \
                 --enable-perl \
                 --enable-gnutls \
                 --disable-nss \
                 --enable-tcl \
                 --enable-tk \
                 --enable-cyrus-sasl \
                 --enable-pixmaps-install \
                 --enable-trayicon-compat \
                 --enable-doxygen \
                 --enable-dot \
                 --enable-devhelp \
                 --disable-fuzzing \
                 --disable-debug \
                 --with-x \
                 --with-gstreamer=1.0 \
                 --with-system-ssl-certs=/etc/ssl/certs \
                 PYTHON=/usr/bin/python3"

