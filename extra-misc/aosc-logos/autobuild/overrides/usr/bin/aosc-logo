#!/bin/bash

LOGO_PATH="/usr/share/aosc-logos"

usage() {
    echo "\
Usage: aosc-logo [options]
It shows hotfix logo when no argument is given.

    -h, --help    display help message

    LOGOS
    -f, --fsck                display AOSC OS 6 \"Fsck!\" logo
    -g, --gumblex             display AOSC OS 7 \"Gumblex\" logo
    -t, --hotfix              display AOSC OS 8 \"Hotfix\" logo
    "
}

while true
do
    case "$1" in
        -h | --help ) usage; break ;;
        -f | --fsck ) "$LOGO_PATH"/fsck; break ;;
        -g | --gumblex ) "$LOGO_PATH"/gumblex; break ;;
        -t | --hotfix ) "$LOGO_PATH"/hotfix; break ;;
        -- ) shift ;;
        * ) "$LOGO_PATH"/hotfix; break ;;
    esac
done
