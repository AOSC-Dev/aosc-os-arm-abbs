./configure --host=armv7a-hardfloat-linux-gnueabi --prefix=/usr \
            --libdir=/usr/lib \
            --bindir=/usr/bin \
            --localstatedir=/run \
            --enable-fs-paths-extra=/usr/bin \
            --enable-raw \
            --enable-newgrp \
            --enable-write \
            --enable-mesg \
            --enable-socket-activation \
            --with-python=3 &&
make $ABMK &&
make install DESTDIR=`pwd`/abdist &&

mv abdist/sbin/* abdist/usr/sbin/
rm -rf abdist/sbin
