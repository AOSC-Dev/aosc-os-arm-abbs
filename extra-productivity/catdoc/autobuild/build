abinfo "Configuring ..."
./configure --prefix=/usr
abinfo "Making ..."
make
abinfo "Installing ..."
make installroot="$PKGDIR" mandir=/usr/share/man/man1 install -j1
abinfo "Installint manpages ..."
install -d "$PKGDIR"/usr/share/man/man1
install -m644 "$SRCDIR"/doc/*.1 "$PKGDIR"/usr/share/man/man1
