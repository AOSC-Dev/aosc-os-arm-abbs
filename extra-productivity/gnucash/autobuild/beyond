(
    cd "$SRCDIR"/../gnucash-docs-$PKGVER

    abinfo "Configuring gnucash-docs ..."
    cmake . \
        ${CMAKE_DEF}

    abinfo "Building gnucash-docs ..."
    make

    abinfo "Installing gnucash-docs ..."
    make install \
        DESTDIR="$PKGDIR"
)

abinfo "Setting executable bits for /usr/bin/* ..."
chmod -v +x "$PKGDIR"/usr/bin/*
