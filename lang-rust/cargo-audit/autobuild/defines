PKGNAME=cargo-audit
PKGSEC=devel
PKGDES="Audit Cargo.lock files for crates with security vulnerabilities"
PKGDEP="glibc libgit2"
BUILDDEP="llvm rustc"

USECLANG=1
CARGO_AFTER="--features fix"
ABSPLITDBG=0

# It is not necessary to check the audit itself to build a new version of cargo-audit
NOCARGOAUDIT=1
